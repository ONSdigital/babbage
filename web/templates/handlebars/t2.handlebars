<head>
	<link rel="stylesheet" href="../../node_modules/ONS-Pattern-Library/dist/css/main.min.css"/>
	<script src="../../node_modules/ONS-Pattern-Library/dist/js/header.js"></script>
</head>

<div class="page-header slate">
	<div class="wrapper">
		<ul class="nav breadcrumb">
			<li>
				<a href="#">Home</a>
			</li>
			<li class="nav__active">
				{{name}}
			</li>
		</ul>
		<h1 class="page-header__title flush--half--bottom">{{name}}</h1>
		<div class="content-reveal lede">
			<p>
				{{lede}}
				<a href="#" class="content-reveal__action hidden" data-content-reveal>See more</a>
			</p>
		</div>
		<div class="page-header__icons">
			<a href="#" class="link-complex">
				<span class="icon icon-twitter icon--grey">
					<span class="visuallyhidden">Share on Twitter</span>
				</span>
			</a>
			<a href="#" class="link-complex">
				<span class="icon icon-facebook icon--grey">
					<span class="visuallyhidden">Share on Facebook</span>
				</span>
			</a>
			<a href="#" class="link-complex">
				<span class="icon icon-gplus icon--grey">
					<span class="visuallyhidden">Share on Google Plus</span>
				</span>
			</a>
		</div>
	</div>
	<!-- /wrapper -->
</div>
<!-- /page-header -->

<div class="wrapper box box--padded-vertical">
	<div class="grid-wrap">
		{{#each sections}}
		<div class="grid-col tablet-grid-one-third clearfix">
			<article class="box box--padded-vertical">
				<header class="box__header">
						<h3 class="flush">
							<a href="">{{@index}}{{name}}</a>
						</h3>
				</header>
				<div class="box__content">
					<p>{{description}}</p>
				</div>
			</article>
		</div>
		{{/each}}
	</div>
	<!-- /grid-wrap -->
</div>
<!-- /wrapper -->
