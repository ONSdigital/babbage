{{> templates/handlebars/partials/header}}
<div class="page-header slate slate--light-green">
	<div class="wrapper">
		{{> templates/handlebars/partials/breadcrumb}}
		<p class="page-header__title">
			Time series previous versions
		</p>
		<h1 class="page-header__title flush--half--bottom">{{description.title}}</h1>
		<div class="grid-wrap">
			<p class="grid-col tablet-grid-one-quarter {{#if description.nationalStatistic}}page-header__meta-block-with-img{{/if}}">
				{{#if description.nationalStatistic}}
				<img src="../../node_modules/ONS-Pattern-Library/ui/img/national-statistics.png" alt="National Statistics logo">
				{{/if}}
				<span>Contact: </span><br/><a href="mailto:{{description.contact.email}}">{{#if description.contact.name}}{{description.contact.name}}{{else}}{{description.contact.email}}{{/if}}</a>
			<p class="grid-col tablet-grid-one-quarter divider--border-left">
				<span>Data period covered: </span>{{description.period}}
			</p>
			<p class="grid-col tablet-grid-one-quarter divider--border-left">
				<span>Next release: </span></br>{{df description.nextRelease}}
			</p>
			<p class="grid-col tablet-grid-one-quarter divider--border-left">
				<span>Series ID: </span>{{description.seriesID}}
				</br>
				<span>Units :</span>{{description.units}}
				</br>
				{{description.adjustment}}
			</p>
		</div>
		<!-- /grip-wrap -->
		
	</div>
	<!-- /wrapper -->
</div>
<!-- /page-header -->
<div class="wrapper panel--mar print-links">
	<div class="grid-wrap">
		<div class="grid-col desktop-grid-full-width">
			{{md introduction}}
			<div class="grid-wrap">
				<div class="grid-col desktop-grid-two-thirds">
					<div class="grid-wrap">
						<!-- data FROM select boxes -->
						<div class="grid-col desktop-grid-one-half">
							<div class="grid-wrap">
								<p class="grid-col grid-one-half">
									Data published between
								</p>
								<select class="input grid-col grid-one-quarter" id="select-month" name="month">
									<option value="1" selected>Sept</option>
									<option value="2">Oct</option>
								</select>
								<select class="input grid-col grid-one-quarter" id="select-year" name="year">
									<option value="1" selected>2014</option>
									<option value="2">2015</option>
								</select>
							</div>
						</div>
						<!-- end of data from select boxes -->
						<!-- data TO select boxes -->
						<div class="grid-col desktop-grid-one-half">
							<div class="grid-wrap">
								<p class="grid-col grid-one-half">
									To
								</p>
								<select class="input grid-col grid-one-quarter" id="select-month" name="month">
									<option value="1" selected>Nov</option>
									<option value="2">Dec</option>
								</select>
								<select class="input grid-col grid-one-quarter" id="select-year" name="year">
									<option value="1" selected>2014</option>
									<option value="2">2015</option>
								</select>
							</div>
						</div>
						<!-- end of data to select boxes -->
					</div>
				</div>
				<div class="grid-col desktop-grid-one-third">
					<div class="grid-wrap">
						<div class="grid-col grid-one-half">
							<a href="#" class="btn btn--primary btn--small btn--thin btn--narrow">
								Show
							</a>
						</div>
					</div>
				</div>
			</div>
			<table width="100%" class="tablesaw">
				<thead>
					<tr>
						<th>Date updated</th>
						<th>Reason for update</th>
						<th>More information</th>
						<th class="text-right"><label>Select all <input type="checkbox" name="checkbox" value="1"></label></th>
					</tr>
				</thead>
				<tbody>
					{{#each versions}}
					<tr>
						<td>{{date}}</td>
						<td>{{reason}}</td>
						<td>{{information}}</td>
						<td class="text-right"><input type="checkbox" name="checkbox" value="1"></td>
					</tr>
					{{/each}}
				</tbody>
			</table>
			<div class="slate--mid-grey panel--pad-small panel--bottom-mar">
				<div class="grid-wrap">
					<div class="grid-col desktop-grid-one-third desktop-grid-push-two-thirds">
						<a href="#" class="btn btn--primary btn--thin btn--narrow">.CSV
							<span class="icon icon-download icon--button-inline"></span>
						</a>
						<a href="#" class="btn btn--primary btn--thin btn--narrow">.XLSX
							<span class="icon icon-download icon--button-inline"></span>
						</a>
					</div>
				</div>
			</div>
			{{#each sections}}
			<h2>{{title}}</h2>
			{{md markdown}}
			{{/each}}
		</div><!-- /grid-full-width -->
		<div class="grid-col desktop-grid-one-half">
			<article class="box box--padded sectioned">
				<header class="box__header">
					<h3>Methodology</h3>
				</header>
				<div class="box__content">
					<ul class="list--neutral">
						{{#each methodology}}
						<li class="flush--third--bottom">
							<a href="{{uri}}">{{title}}</a>
						</li>
						{{/each}}
					</ul>
				</div>
			</article>
		</div>
		<div class="grid-col desktop-grid-one-half">
			<article class="box box--padded sectioned">
				<header class="box__header">
					<h3>Contact details for this time series</h3>
				</header>
				<div class="box__content">
					<address>
						{{#if description.contact.name}}{{description.contact.name}}</br>{{/if}}
	              		<a href="mailto:{{description.contact.email}}">{{description.contact.email}}</a></br>
	              		{{#if description.contact.telephone}}Telephone: {{description.contact.telephone}}{{/if}}
	                </address>
				</div>
			</article>
		</div>
	</div><!-- /grid-wrap -->
</div>

{{> templates/handlebars/partials/footer}}
