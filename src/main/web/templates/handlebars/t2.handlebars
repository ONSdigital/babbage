{{> partials/header}}
<div class="page-header slate">
	<div class="wrapper">
		{{> partials/breadcrumb}}
		<h1 class="page-header__title flush--half--bottom">{{description.title}}</h1>
		<div class="content-reveal lede">
			<p>
				{{description.summary}}
			</p>
		</div>
		{{> partials/social-icons}}
	</div>
	<!-- /wrapper -->
</div>
<!-- /page-header -->

<div class="wrapper box box--padded-vertical">
	<div class="grid-wrap">
		<ul class="list--neutral">
		{{#each sections}}
            <li class="grid-col tablet-grid-one-third box--padded-vertical nav--block-landing">
             	<h3>
					<a href="{{uri}}">{{description.title}}</a>
				</h3>
				<p>{{description.summary}}</p>
			</li>
		{{/each}}
		</ul>
		<div class="grid-col desktop-grid-one-third tablet-grid-one-half clear-left">
				<article class="box box--orange">
					<div class="box__inner border box--padded has-icon box--orange--separated-left">
						<header class="box__header">
							<h2 class="gamma">
								<a href="#">Looking for local statistics?</a>
							</h2>
						</header>
						<div class="box__content">
							<p>
								A handy guide to let you know where to find local statistics.
							</p>
						</div>
						<!-- /box__content -->
					</div>
					<!-- /box-inner -->
				</article>
				<!-- /box -->
			</div>
			<!-- /grid-col -->
	</div>
	<!-- /grid-wrap -->
</div>
<!-- /wrapper -->

{{> partials/footer}}
