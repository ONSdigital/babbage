{{> partials/header}}
<div class="page-header slate">
	<div class="wrapper">
		{{> partials/breadcrumb}}
		<h1 class="page-header__title flush--half--bottom">{{description.title}}</h1>
		<div class="content-reveal lede">
			<p>
				{{description.summary}}
			</p>
		</div>
	</div>
	<!-- /wrapper -->
</div>
<!-- /page-header -->

<div class="wrapper">
	<div class="grid-wrap">
		<ul class="list--neutral">
		{{#each sections}}
            <li class="grid-col tablet-grid-one-third box--padded-vertical nav--block-landing">
             	<h3>
					<a href="{{uri}}">{{description.title}}</a>
				</h3>
				<p>{{description.summary}}</p>
			</li>
		{{/each}}
		</ul>
		<div class="grid-col desktop-grid-one-third tablet-grid-one-half clear-left box--padded-vertical">
			{{> partials/footer}}	
		</div>
		<!-- /grid-col -->
	</div>
	<!-- /grid-wrap -->
</div>
<!-- /wrapper -->
{{> partials/footer}}