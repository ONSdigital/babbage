{{> templates/handlebars/partials/header}}
<main id="main" role="main" tabindex="-1">
	<div class="page-header slate slate--red">
		<div class="wrapper">
			{{> templates/handlebars/partials/breadcrumb}}
			<h1 class="page-header__title flush--half--bottom">{{name}}</h1>
			{{> templates/handlebars/partials/social-icons}}
		</div>
		<!-- /wrapper -->
	</div>
	<!-- /page-header -->
	<div class="wrapper panel--mar ">
		<div class="grid-wrap">
			<div class="grid-col desktop-grid-full-width">
				<p>
					{{md lede}}
				</p>
			</div>
			<!-- /desktop-grid-full-width -->
			<div class="grid-col desktop-grid-two-thirds">
				<div class="grid-wrap">
					<ul class="list--neutral">
					{{#each sections}}
			            <li class="grid-col tablet-grid-one-half box--padded-vertical nav--block-landing--pairs">
			             	<h3>
								<a href="{{uri}}">{{name}}</a>
							</h3>
							<p>{{description}}</p>
						</li>
					{{/each}}
					</ul>
				</div>
			</div>
			<!-- /desktop-grid-two-thirds -->
			{{#if box}}
			<div class="grid-col desktop-grid-one-third">
				<div class="box solid box--purple--separated--left">
					<div class="box__inner border box--padded">
						<h3 class="box__section__header">{{title}}</h3>
						{{md content}}
					</div>
					<!-- / box__inner border box--padded -->
				</div>
				<!-- / box solid box--purple--separated--left -->
			</div>
			<!-- /desktop-grid-one-third -->
			{{/if}}
		</div>
		<!-- /grid-wrap -->
	</div>
	<!-- /wrapper -->
</main>
{{> templates/handlebars/partials/footer}}