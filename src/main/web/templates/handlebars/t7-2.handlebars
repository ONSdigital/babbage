{{> templates/handlebars/partials/header}}
<div class="page-header slate slate--red">
	<div class="wrapper">
		{{> templates/handlebars/partials/breadcrumb}}
	  <p class="page-header__title">
			<strong>User requested data</strong>
		</p>
		<h1 class="page-header__title flush--half--bottom">{{name}}</h1>
		<div class="grid-wrap">
			<p class="grid-col tablet-grid-one-quarter">
				<span>Release date: </span><br/>{{releaseDate}}
			</p>
			<p class="grid-col tablet-grid-one-quarter divider--border-left">
				<span>Reference number: </span><br/>{{ref}}
			</p>
		</div>
		{{> templates/handlebars/partials/social-icons}}
	</div>
</div>
<!-- /page-header 'slate' -->
<div class="wrapper panel--mar">
	<div class="grid-wrap">
		<div class="grid-col desktop-grid-two-thirds">
			<h2>Summary of request</h2>
			<p>
				{{summary}}
			</p>
			<h2>Data provided for request</h2>
			<p><a href="{{download.uri}}">{{name}}</a></p>
		</div>
		<!-- /desktop-grid-two-thirds -->
		<div class="grid-col desktop-grid-one-third">
			<article class="box solid box--purple--separated--left">
				<div class="box__inner border box--padded">
					<h3 class="box__section__header">
							Data provided for request
					</h3>
					<!-- /box__header -->
					<div class="box__content">
						<a href="{{download.uri}}">{{download.title}}</a> ({{download.size}} {{download.format}})
					</div>
					<!-- /box__content -->
				</div>
				<!-- /box__inner -->
			</article>
			<!-- /box -->
		</div>
		<!-- /desktop-grid-one-third -->
	</div>
	<!-- /grid-wrap -->
</div>
<!-- /wrapper -->
{{> templates/handlebars/partials/footer}}
