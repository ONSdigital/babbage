{{#partial "block-metadata"}}
  {{!-- Metadata --}}
        <div class="wrapper">
            <div class="col-wrap">
                {{> content/partials/metadata/release-date}}
                <p class="col col--md-12 col--lg-15 meta__item">
                    <span>{{labels.urd-ref-no}}: </span><br/>{{description.reference}}
                </p>
            </div>
        </div>
{{/partial}}

{{#partial "block-content"}}
    <div class="wrapper">
        <div class="col-wrap">
            <article class="col col--md-two-thirds col--lg-two-thirds margin-bottom--double">

                {{!-- SUMMARY --}}
                <section class="section__content--static-markdown">
                    <h2>{{labels.urd-summary}}</h2>
                    {{#each markdown}}
                        {{md this}}
                    {{/each}}
                </section>

                <section class="section__content--static-markdown">
                    <h2>{{#if_eq downloads.size 1}}{{labels.urd-download}}{{/if_eq}} {{#if_ne downloads.size 1}}{{labels.urd-downloads}}{{/if_ne}}</h2>

                    {{!-- TODO list--neutral here puts li text off baseline. Need to add some padding --}}{{!--
                     <ul class="list--neutral">
                         {{#each downloads}}
                             <li>
                                 <a href="/file?uri={{file}}" title="{{title}}">{{title}}</a> ({{fs file}} {{fe file}})
                             </li>
                         {{/each}}
                     </ul> --}}
                    {{#each downloads}}
                        <p><a href="/file?uri={{concat uri "/" file}}" title="{{title}}">{{title}}</a> ({{fs (concat uri "/"  file)}} {{fe (concat uri "/"  file)}})</p>
                    {{/each}}
                </section>

            </article>

            <div class="col col--md-one-third col--lg-one-third margin-top">
                <div class="tiles__item tiles__item--nav-type flush-col">
                    <h2 class="tiles__title-h2 tiles__title-h2--nav">{{#if_eq downloads.size 1}}{{labels.urd-download}}{{/if_eq}} {{#if_ne downloads.size 1}}{{labels.urd-downloads}}{{/if_ne}}</h2>

                    <div class="tiles__content--nav">
                        <ul class="list--neutral">
                            {{#each downloads}}
                                <li class="flush--third--bottom">
                                    <a href="/file?uri={{file}}" title="{{title}}">{{title}}</a> ({{fs file}} {{fe file}})
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>
{{/partial}}


