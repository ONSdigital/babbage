

	{{!-- Page header --}}
	<div class="page-intro">
		<div class="wrapper">
			<div class="col-wrap">
				<div class="col">
					{{!-- Breadcrumb --}}
					{{> partials/breadcrumb}}

					{{!-- Title & summary --}}
					<h1 class="page-intro__title">{{description.title}}{{#if description.edition}}: {{description.edition}}{{/if}}</h1>

					<p class="page-intro__content col col--md-47 col--lg-48">{{description._abstract}}</p>

				</div>
			</div>
		</div> {{!-- /wrapper --}}

		<div class="alert">
			<div class="wrapper">
				<div class="col-wrap">
					<div class="col">

						{{#if description.latestRelease}}
						<p class="alert__title">This is the latest release</p> <a class="btn btn--primary print--hide" href="{{parentPath uri}}/previousReleases">view previous releases</a>
						{{else}}
						{{#resolve (concat (parentPath uri) "/latest") filter="title"}}
						<p class="alert__title">This is not the latest release</p> <a class="btn btn--primary print--hide" href="{{uri}}">view latest release</a>
						{{/resolve}}
						{{/if}}

					</div>
				</div>
			</div> {{!-- /wrapper --}}
		</div> {{!-- /slate--ship-gray --}}

		<div class="meta-wrap">
			<div class="wrapper">

				{{!-- Meta info --}}
				<div class="col-wrap">

					{{!-- Contact & NS logo--}}
					<p class="col col--md-12 col--lg-15 meta__item">
						{{#if description.nationalStatistic}}
						<img class="meta__image" src="/node_modules/ONS-Pattern-Library/dist/img/national-statistics.png" alt="National Statistics logo" />
						{{/if}}
						<span>{{labels.meta-contact}}: </span><br/><a href="mailto:{{description.contact.email}}">{{#if description.contact.name}}{{description.contact.name}}{{else}}{{description.contact.email}}{{/if}}</a>
					</p>

					{{!-- Release date --}}
					<p class="col col--md-12 col--lg-15 meta__item">
						<span>{{labels.release-date}}: </span><br/>{{df description.releaseDate}}<br/>
					</p>

					{{!-- Next release --}}
					{{#if description.nextRelease}}
					<p class="col col--md-12 col--lg-15 meta__item">
						<span>{{labels.release-next}}: </span><br/>{{description.nextRelease}}
					</p>
					{{/if}}


					{{!-- Print and download --}}
					<p class="col col--md-12 col--lg-15 print--hide meta__item">
						<a href="" id="jsEnhancePrint" class="link-complex nojs-hidden js-enhance--show">
							Print article
						</a>
						<br class="nojs-hidden js-enhance--show"/>
						<a href="{{uri}}/pdf" class="link-complex">
							{{labels.dl-pdf}}
						</a>
					</p>
				</div>
			</div> {{!-- /wrapper --}}
		</div> {{!-- /meta-wrap --}}

	</div> {{!-- /page-intro --}}



{{!-- TABLE OF CONTENTS --}}
<div class="page-content">
	<div class="wrapper">
		<div class="col-wrap">
			<div class="col table-of-contents print--avoid-break">
				<h2 class="table-of-contents__title">{{labels.toc}}</h2>
				<ol id="toc" class="table-of-contents__list">
					{{#each sections}}
					<li class="table-of-contents__item">
						<a href="#{{slugify title}}" class="jsEnhanceAnimateScroll">{{title}}</a>
					</li>
					{{/each}}
					{{#if accordion}}
					{{#each accordion}}
					<li class="table-of-contents__item">
						<a href="#{{slugify title}}" class="jsEnhanceAnimateScroll expand-accordion">{{title}}</a>
					</li>
					{{/each}}
					{{/if}}
					{{#if relatedMethodology}}
					<li class="table-of-contents__item">
						<a href="#methodology" class="jsEnhanceAnimateScroll expand-accordion">Methodology</a>
					</li>
					{{/if}}
				</ol>
			</div>
		</div>

		{{!-- Content --}}
		<article class="col col--md-36 col--lg-39 page-content__main-content">
			{{#each sections}}
				<section id="{{slugify title}}" class="section__content--markdown">
					<header>
						<h2><span class="section__content-number">{{@index_1}}.</span> {{title}}</h2>
					</header>
					{{md markdown}}
					<a class="print--hide jsEnhanceAnimateScroll" href="#toc" title="{{labels.back-to-toc}}">{{labels.back-to-toc}}</a>
				</section>
				{{/each}}
				<!-- Accordion -->
				{{#if_any accordion relatedMethodology}}
				<div class="accordion__container"> {{!-- TODO Reliant on empty div for first accordion to have top border --}}
					{{#each accordion}}
						<section id="{{slugify title}}" class="accordion is-collapsed section__content--markdown">
							<h2 class="accordion__title" aria-controls="content-{{@index_1}}">
                                <span class="section__content-number">{{nf (add sections.size @index_1)}}.</span>{{title}}
							</h2>
							<div class="accordion__content panel--bottom-mar-small" aria-labelledby="sc-{{@index_1}}">
								{{md markdown}}
								<a class="print--hide jsEnhanceAnimateScroll" href="#toc" title="{{labels.back-to-toc}}" class="">{{labels.back-to-toc}}</a>
							</div>
						</section>
					{{/each}}
					{{#if relatedMethodology}}
					<section id="methodology" class="accordion is-collapsed section__content--markdown">
						<h2 class="accordion__title" aria-controls="content-{{@index_1}}"><span class="section__content-number">{{nf (add sections.size (increment accordion.size))}}.</span>Methodology</h2>
						<div class="accordion__content panel--bottom-mar-small" aria-labelledby="sc-{{@index_1}}">
							<ul class="list--neutral">
							{{#each relatedMethodology}}
								{{#resolve this.uri filter="description"}}
								<li><a href="{{absolute uri}}">{{description.title}}</a></li>
								{{/resolve}}
							{{/each}}
							</ul>
							<a class="print--hide jsEnhanceAnimateScroll" href="#toc" title="{{labels.back-to-toc}}" class="">{{labels.back-to-toc}}</a>
						</div>
					</section>
					{{/if}}
				</div>
			{{/if_any}}
		</article>
			{{!-- Sidebar --}}

		<div class="col col--md-11 col--lg-20">
			{{!-- Related data --}}
			{{>partials/related/data}}

			{{!-- Related articles --}}
			{{>partials/related/articles}}

			{{!-- Contact details --}}
			{{>partials/contact}}

		</div> {{!-- /col --}}
	</div> {{!-- /wrapper --}}
</div> {{!-- /page-content --}}
