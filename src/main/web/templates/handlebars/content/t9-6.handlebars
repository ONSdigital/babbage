{{!-- Resolve parents of current uri for and assign to variable breadcrumb for building breadcrumb --}}
{{resolveParents uri assign="breadcrumb"}}
{{!-- Resolve navigation fetching children of root uri "/" with depth 2 --}}
{{resolveChildren "/" depth=2 assign="navigation"}}

{{> partials/header}}

<main id="main" role="main" tabindex="-1">
	<div class="wrapper panel--top-mar">
		{{> partials/breadcrumb}}
		<p class="page-header__title">
			Previous releases
		</p>
		<h1 class="page-header__title flush--half--bottom">{{description.title}} statistical bulletins</h1>
		{{!--<div class="grid-wrap">--}}
			{{!--<p class="grid-col desktop-grid-two-thirds">--}}
				{{!--<strong>Frequency: </strong>{{description.frequency}}--}}
			{{!--</p>--}}
		{{!--</div>--}}
		{{!--<div class="grid-wrap">--}}
		{{!--<p class="grid-col desktop-grid-two-thirds print-links">--}}
			{{!--{{md description.summary}}--}}
		{{!--</p>--}}
		{{!--</div>--}}
		<div class="grid-wrap print-links">
			<div class="grid-col desktop-grid-two-thirds">
				<div class="panel panel--separated--top">
					<ul class="list--neutral">
					{{#resolveChildren uri}}
						{{#loop this reverse=true}}
							{{#if @first}}
							<li>
								<h3 class="flush">Latest release</h3>
								<h3 class="flush stand-out-text">
									<a href="{{uri}}">{{description.title}}
									{{#if description.edition}}
										
										{{#if_ne description.edition 'yes'}}: {{description.edition}}{{/if_ne}}
									{{/if}}
									</a>
								</h3>
								<p class="stand-out-text">
									Released: {{df description.releaseDate}}
								</p>
							</li>
							{{else}}
							<li>
								<h3 class="flush">
									<a href="{{uri}}">{{description.title}}
									{{#if description.edition}}
										{{#if_ne description.edition 'yes'}}: {{description.edition}}{{/if_ne}}
									{{/if}}										
									</a>
								</h3>
								<p>
									Released: {{df description.releaseDate}}
								</p>
							</li>
							{{/if}}
						{{/loop}}
						{{/resolveChildren}}
					</ul>
				</div>
				<!-- /panel -->
			</div>
			<!-- /desktop-grid-two-thirds -->
		</div>
		<!-- /grid-wrap -->
		<div class="grid-wrap panel--mar print-links">
			<div class="grid-col desktop-grid-two-thirds">
				<article class="box box--purple box--purple--separated--left">
					<div class="box__inner border box--padded">
						<header class="box__header">
							<h3 class="gamma">Need an earlier release?</h3>
						</header>
						<div class="box__content">
							<p>
								We moved them to <a href="#">The National Archives</a> website, to keep this website as responsive as possible.
							</p>
							<p>
								<strong>Please note: </strong>all historical data is still on this website.
							</p>
						</div>
					</div>
					<!-- /box__inner -->
				</article>
				<!-- /box -->
			</div>
			<!-- /desktop-grid-two-thirds -->
		</div>
		<!-- /grid-wrap -->
	</div>
	<!-- /wrapper -->
</main>
{{> partials/footer}}