<main id="main" role="main" tabindex="-1">

{{!-- Page header --}}
<div class="page-intro">
	<div class="wrapper">
		<div class="col-wrap">
			<div class="col">
				{{!-- Breadcrumb --}}
				{{> partials/breadcrumb}}

				{{!-- Title & summary --}}
				<h1 class="page-intro__title">{{description.title}}{{#if description.edition}}: {{description.edition}}{{/if}}</h1>

				<p class="page-intro__content col col--md-47 col--lg-48">{{description.summary}}</p>

			</div>
		</div>
	</div> {{!-- /wrapper --}}

<div class="alert">
	<div class="wrapper">
		<div class="col-wrap">
			<div class="col">
				{{!-- Latest info --}}
				{{#if description.latestRelease}}
				<p class="alert__content">This is the latest release</p> <a class="btn btn--primary print--hide" href="{{parentPath uri}}/previousReleases">view previous releases</a>
				{{else}}
				{{#resolve (concat (parentPath uri) "/latest") filter="title"}}
				<p class="alert__content">This is not the latest release</p> <a class="btn btn--primary print--hide" href="{{uri}}">view latest release</a>
				{{/resolve}}
				{{/if}}
			</div>
		</div>
	</div> {{!-- /wrapper --}}
</div> {{!-- /slate--ship-gray --}}

<div class="meta-wrap">
	<div class="wrapper">

		{{!-- Meta info --}}
		<div class="col-wrap">

			{{!-- Contact & NS logo--}}
			<p class="col col--md-14 col--lg-17 meta__item">
				{{#if description.nationalStatistic}}
				<img class="meta__image" src="/node_modules/ONS-Pattern-Library/dist/img/national-statistics.png" alt="National Statistics logo" />
				{{/if}}
				<span>{{labels.meta-contact}}: </span><br/><a href="mailto:{{description.contact.email}}">{{#if description.contact.name}}{{description.contact.name}}{{else}}{{description.contact.email}}{{/if}}</a>
			</p>

			{{!-- Release date --}}
			<p class="col col--md-11 col--lg-14 meta__item">
				<span>{{labels.release-date}}: </span><br/>{{df description.releaseDate}}<br/>
			</p>

			{{!-- Next release --}}
			<p class="col col--md-11 col--lg-14 meta__item">
				<span>{{labels.release-next}}: </span><br/>{{#if description.nextRelease}}{{description.nextRelease}}{{else}}To be announced{{/if}}
			</p>


			{{!-- Print and download --}}
			<p class="col col--md-11 col--lg-14 print--hide meta__item">
				<a href="" id="jsEnhancePrint" class="link-complex nojs-hidden js-enhance--show">
					{{labels.print-report}}
				</a>
				<br class="nojs-hidden js-enhance--show"/>
				<a href="{{uri}}/pdf" class="link-complex">
					{{labels.dl-pdf}}
				</a>
			</p>
		</div>
	</div> {{!-- /wrapper --}}
</div> {{!-- /meta-wrap --}}

</div> {{!-- /page-intro --}}



{{!-- TABLE OF CONTENTS --}}
<div class="page-content">
<div class="wrapper">
	<div class="col-wrap">
		<div class="col table-of-contents print--avoid-break">
			<h2 class="table-of-contents__title">{{labels.toc}}</h2>
			<ol id="toc" class="table-of-contents__list">
				{{#each sections}}
				<li class="table-of-contents__item">
					<a href="#{{slugify title}}" class="jsEnhanceAnimateScroll">{{title}}</a>
				</li>
				{{/each}}
				{{#if accordion}}
				{{#each accordion}}
				<li class="table-of-contents__item">
					<a href="#{{slugify title}}" class="jsEnhanceAnimateScroll expand-accordion">{{title}}</a>
				</li>
				{{/each}}
				{{/if}}
			</ol>
		</div>
	</div>

	{{!-- Content --}}
	<!-- <div class="col-wrap"> -->
		<article class="col col--md-36 col--lg-39 page-content__main-content">
			{{#each sections}}
			{{!-- Prevent bottom border on last section before accordian --}}
				{{#if @last}}
					<section id="{{slugify title}}" class="section__content--markdown">
				{{else}}
					<section id="{{slugify title}}" class="section__content--markdown">
				{{/if}}
					<header>
						<h2><span class="section__content-number">{{@index_1}}.</span> {{title}}</h2>
					</header>
					{{md markdown}}
					<a class="print--hide jsEnhanceAnimateScroll" href="#toc" title="{{labels.back-to-toc}}">{{labels.back-to-toc}}</a>
				</section>
				{{/each}}
				<!-- Accordion -->
				{{#if accordion}}
				<div>
					{{#each accordion}}
					<section id="{{slugify title}}" class="accordion is-collapsed section__content--markdown">
						<h2 class="accordion__title" aria-controls="content-{{@index}}"><span class="section__content-number">{{nf (add sections.size @index_1)}}.</span>{{title}}</h2>
						<div class="accordion__content panel--bottom-mar-small" aria-labelledby="sc-{{@index}}">
							{{md markdown}}
							<a class="print--hide jsEnhanceAnimateScroll" href="#toc" title="{{labels.back-to-toc}}" class="">{{labels.back-to-toc}}</a>
						</div>
					</section>
					{{/each}}
				</div>
				{{/if}}
			</article>
			{{!-- Sidebar --}}

			<div class="col col--md-11 col--lg-20">
			{{!-- Related data --}}
				{{#if relatedData}}
					<div class="tiles__item tiles__item--nav-type">
						<h3 class="tiles__title-h3 tiles__title-h3--nav">{{labels.bulletin-related-data}}</h3>
						<ul class="tiles__content--nav list--neutral">
							{{#each relatedData}}
							{{#resolve this.uri filter="title"}}
							<li><a href="{{absolute uri}}">{{title}}</a></li>
							{{/resolve}}
							{{/each}}
						</ul>
					</div>
				{{/if}}

				{{!-- Contact details --}}
				<div class="tiles__item tiles__item--nav-type">
					<h3 class="tiles__title-h3 tiles__title-h3--nav">
					{{labels.bulletin-contact}}
					</h3>
					<address class="tiles__content--nav">
						{{#if description.contact.name}}{{description.contact.name}}<br/>{{/if}}
						<a href="mailto:{{description.contact.email}}">{{description.contact.email}}</a></br>
						{{#if description.contact.telephone}}{{labels.phone}}: {{description.contact.telephone}}{{/if}}
					</address>
				</div>{{!-- /tiles --}}
			</div> {{!-- /col --}}

{{!-- Bottom links: related bulletins and local stats --}}
	<div class="col-wrap">
		{{#if relatedBulletins}}
		<div class="col col--md-one col--lg-two-thirds">
			<div class="tiles__item tiles__item--nav-type flush-col">
				<h3 class="tiles__title-h3 tiles__title-h3--nav">{{labels.bulletin-related-bulletins}}</h3>
				<ul class="tiles__content tiles__content--nav list--neutral">
					{{#each relatedBulletins}}
					{{#resolve this.uri filter="description"}}
						<li>
							<h3>
							<a href="{{uri}}">{{description.title}}{{#if description.edition}}: {{description.edition}}{{/if}}</a>
							</h3>
							{{md description.summary}}
						</li>
					{{/resolve}}
					{{/each}}
					</ul>
			</div>
		</div>
		{{/if}}
		<div class="col col--md-one col--lg-one-third">
			{{> partials/local-box}}
		</div>
	</div>
</div> {{!-- /wrapper --}}
</div>
</main>
