{{#partial "block-content"}}
<div class="wrapper">
    <div class="col-wrap">
        <article>
            <div class="col {{#if_any links downloads}}col--lg-two-thirds{{/if_any}}">
                {{#each markdown}}
                    <section>
                        <div class="section__content--static-markdown">{{md this}}</div>
                    </section>
                {{/each}}
            </div>
        </article>
        {{#if_any links downloads}}
        <div class="col col--lg-one-third margin-top">
            {{!-- RELATED LINKS --}}
			{{> partials/related/related-links }}
            {{!-- RELATED DOWNLOADS --}}
            {{#if downloads}}
            <div class="tiles__item tiles__item--nav-type flush-col">
                <h3 class="tiles__title-h3 tiles__title-h3--nav">
                {{labels.related-downloads}}
                </h3>
                <div class="tiles__content--nav">
                    <ul class="list--neutral">
                        {{#each downloads}}
                            <li>
                                <a href="/file?uri={{concat uri "/" (fn file)}}" data-ga-event data-ga-event-category='download-{{fe (concat uri "/" (fn file))}}' data-ga-event-label="{{title}}">{{title}}</a>
                                ({{fs (concat uri "/" (fn file))}} {{fe (concat uri "/" (fn file))}})
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
            {{/if}}
        </div>
        {{/if_any}}
    </div>
</div>
{{/partial}}

{{!-- Inheriting from base content template --}}
{{> content/base/content}}