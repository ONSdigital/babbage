{{#partial "block-content"}}
        <div class="wrapper">

            {{!-- SECTIONS --}}
            {{#if sections}}
                <ul class="col-wrap col-span--lg-thirds tiles__list margin-top--double">
                    {{#each sections}}
                        <li class="col col--md-half col--lg-one-third background--mercury height--31 height--31-ellipsis margin-top--0 margin-left-md--1 margin-bottom--2 padding-top--0 padding-right--0 padding-bottom--0 padding-left--0 js-hover-click">
                            <div class="min-height--10 background--gallery padding-top--2 padding-left--1 padding-right--1">
                                <h2 class="flush"><a href="{{uri}}">{{title}}</a></h2>
                            </div>
                            <div class="box__content padding-top--1 padding-right--1 padding-bottom--1 padding-left--1 border-top--iron-sm border-top--iron-md">
                                <p>{{summary}}</p>
                            </div>
                        </li>
                    {{/each}}
                </ul>
            {{/if}}

            {{!-- MARKDOWN --}}
            <div class="section__content--static-markdown">
                {{#if markdown}}
                    {{md markdown.0}}
                {{/if}}
            </div>

            {{#if links}}
                <div class="col-wrap">
                    <div class="col col--md-half col--lg-one-third">
                        <div class="tiles__item flush-col">
                            <h2 class="tiles__title-h2 tiles__title-h2--nav">Related links</h2>

                            <div class="tiles__content tiles__content--nav">
                                <ul class="list--neutral">
                                    {{#each links}}
                                        <li>
                                            <a href="{{uri}}">{{title}}</a>
                                        </li>
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            {{/if}}

        </div>
{{/partial}}

{{!-- Inheriting from base content template --}}
{{> content/base/content}}