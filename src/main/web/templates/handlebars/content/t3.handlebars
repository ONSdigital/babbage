<div class="page-header slate">
	<div class="wrapper" >
		{{> partials/breadcrumb}}
		<h1 class="page-header__title flush--half--bottom">{{description.title}}</h1>
		<p>
			{{description.summary}}
		</p>
		<!-- /lede -->
		{{resolve statsBulletins.0.uri filter="description" assign="bulletin"}}
		{{#if bulletin}}
		{{resolve items.0.uri assign="data"}}
		<div class="grid-wrap">
			{{#if_any data.years data.quarters data.months}}
			{{> partials/t3/headline-data}}
			{{/if_any}}
			<!-- /grid-col -->
			<div class="grid-col  {{#if_any data.years data.quarters data.months}}tablet-grid-one-half{{/if_any}} headline--box-container panel--mobile-bottom-mar">
				<div class="box--padded equal-height solid panel--bottom-mar">
					<h2>{{labels.product-latest-stats-bulletin}}</h2>
					<header class="box___section">
						<h3 class="navpanel-list-heading lede box--padded-bottom-small">
						<a href="{{statsBulletins.0.uri}}">{{bulletin.description.title}}{{#if bulletin.description.edition}}: {{bulletin.description.edition}}{{/if}}</a>
						</h3>
					</header>
					<h3>{{labels.product-whats-in-bulletin}}</h3>
					<ul class="list--bullet mini flush--half--top navpanel-list headline--box-container-text">
						<li>
							{{bulletin.description.headline1}}
						</li>
						<li>
							{{bulletin.description.headline2}}
						</li>
						<li>
							{{bulletin.description.headline3}}
						</li>
					</ul>
					<p class="text-right"><a href="{{statsBulletins.0.uri}}">{{labels.product-read-bulletin}}</a></p>
				</div>
				{{#if_any data.years data.quarters data.months}}
				{{else}}
				{{#if datasets}}
					<a href="#data" class="btn btn--primary">{{labels.product-view-latest-data}}
						{{!-- <span class="icon icon-down-open-big icon--button-inline"></span> --}}
					</a>
				{{/if}}
				{{/ifany}}
				<a href="#reports" class="btn btn--primary">{{labels.product-view-latest-reports}}
					{{!-- <span class="icon icon-down-open-big icon--button-inline"></span> --}}
				</a>
			</div>
			{{/if}}
			<!-- /grid-col -->
		</div>
		<!-- /grid-wrap -->
	</div>
	<!-- /wrapper -->
</div>
<!-- /page-header -->
<!-- Body sections -->
{{#if_any items datasets}}
<section class="panel wrapper panel--bottom-mar-small">
	<div class="box box--green box--green--separated--left" >
		<div class="box__inner border box--padded">
			{{#if items}}
			{{> partials/t3/timeseries-list}}
			{{/if}}
			{{#if datasets}}
			{{> partials/t3/dataset-list}}
			{{/if}}
		</div>
		<!-- /box__inner -->
	</div>
	<!-- /box -->
</section>
<!-- /panel wrapper -->
{{/if_any}}
<!-- Latest statistical bulletins and Related articles-->
{{#if_any statsBulletins relatedArticles}}
<section class="panel wrapper panel--bottom-mar-small">
	<div class="box box--teal box--teal--separated--left" >
		<div class="box__inner border box--padded">
			<!-- Latest statistical bulletins -->
			{{#if statsBulletins}}
			{{> partials/t3/stats-bulletins}}
			{{/if}}
			<!-- Related articles-->
			{{#if relatedArticles}}
			{{> partials/t3/related-articles}}
			{{/if}}
		</div>
	</div>
</section>
{{/if_any}}
{{#if relatedMethodology}}
<section class="panel wrapper panel--bottom-mar-small">
	<div class="grid-wrap">
		<div class="grid-col desktop-grid-one-half">
			<div class="box__inner border box--padded">
				<h3 class="box__section__header">
				{{labels.methodology}}
				</h3>
				<div class="box__content">
					<ul class="list--neutral">
						{{#each relatedMethodology}}
						{{#resolve this.uri filter="title"}}
						<li class="flush--third--bottom"><a href="{{absolute uri}}">{{description.title}}</a></li>
						{{/resolve}}
						{{/each}}
					</ul>
				</div>
			</div>
		</div>
		<div class="grid-col desktop-grid-one-half">
			{{> partials/local-box}}
		</div>
	</div>
</section>
{{/if}}
<!--/panel wrapper -->