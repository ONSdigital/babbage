<div class="page-header slate">
	<div class="wrapper">
		{{> partials/breadcrumb}}
		<h1 class="page-header__title flush--half--bottom">{{description.title}}</h1>
		<div class="content-reveal lede">
			<p>
				{{description.summary}}
			</p>
		</div>
	</div>
	<!-- /wrapper -->
</div>
<!-- /page-header -->
<div class="wrapper">
	<div class="grid-wrap">
		<ul class="list--neutral">
			{{#each sections}}
				{{#resolve uri}}
				{{#ifany items data.datasets statsBulletins relatedArticles}}
					{{> partials/t2/t2-section}}
				{{else}}
					{{#resolve uri}}
					{{#eq type 'taxonomy_landing_page'}}
						{{#if sections}}
							{{> partials/t2/t2-section}}
						{{/if}}
					{{/eq}}
					{{/resolve}}
				{{/ifany}}
				{{/resolve}}
			{{/each}}
		</ul>
		<div class="grid-col desktop-grid-one-third tablet-grid-one-half clear-left box--padded-vertical">
			{{> partials/local-box}}
		</div>
		<!-- /grid-col -->
	</div>
	<!-- /grid-wrap -->
</div>
<!-- /wrapper -->