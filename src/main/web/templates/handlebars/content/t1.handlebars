<main id="main" role="main" tabindex="-1">
<div class="page-intro">
    <div class="wrapper">
        <div class="col-wrap">
            <div class="col">
                {{!-- Title & summary --}}
                {{!-- <h1 class="page-intro__title page-intro__title--home col col--md-47 col--lg-36">{{labels.homepage-welcome}}</h1>
                <div class="page-intro__content page-intro__content--home-big col col--md-47 col--lg-48">{{md description.summary}}</div> --}}
                <h1 class="page-intro__title page-intro__title--home col col--md-47 col--lg-34"><span class="page-intro__title page-intro__title--home-big">
                    Welcome to </span>The Office for National Stastics
                </h1>
                <p class="page-intro__content page-intro__content--home-big col col--md-47 col--lg-34">
                    The UK's largest independent producer of official statistics and the recognised national statistical institute of the UK.
                </p>

            </div> {{!-- /col --}}
        </div> {{!-- /col-wrap --}}
    </div> {{!-- /wrapper --}}
</div>
<!-- panel -->

{{!-- Dynamic stastical highlights --}}
<div class="wrapper panel--mar">
    <!-- grid-wrap -->
    {{!-- <h2>Statistical highlights</h2> --}}

    <div class="grid-wrap grid-wrap--home-hero panel--separated--bottom">
        <!-- grid-col -->
        {{#each sections}}
        <div class="grid-col grid-col--home-hero tablet-wide-grid-one-fifth">
            <article class="nav-panel nav-panel--stats nav-panel--home-hero sectioned">
                {{#resolve statistics.uri filter="description"}}
                <div class="stat__wrap--home clickable-wrap">
                    <!-- add to dl -->
                    <!-- change to dt -->
                    <dl>
                        <dt class="nav-panel__header gamma flush equal-height">
                        {{description.title}}
                        </dt>
                        <!-- change to dd's -->
                        <dd>
                        <span class="stat__figure--home block">
                            {{description.preUnit}} <span class="stat__figure-enhance">{{description.number}}</span> {{description.unit}}
                        </span>
                        <span class="stat__description block">
                            {{description.date}}
                        </span>
                        <a class="js-enhance--hide" href="{{statistics.uri}}">More info</a>
                        <div style="height:155px;" >
                        {{> partials/highcharts/sparkline}}
                        </div>
                        </dd>
                    </dl>
                </div>
                {{/resolve}}
                <footer class="nav-panel__footer-home-hero">
                {{#resolve theme.uri filter="title"}}
                    <a href="{{theme.uri}}">Explore {{title}}</a>
                {{/resolve}}
                </footer>
            </article>
            <!-- grid-col -->
        </div>
        {{/each}}
        <!-- /grid-wrap -->
        <!-- /panel-->
    </div>
</div>
<div class="panel wrapper">
    <div class="panel--top-mar">
        <div class="grid-wrap">
            <article class="grid-col desktop-grid-one-third nav--block-home-highlighted-content">
                <h2 class="delta flush"><a href="/about/releasecalendar">{{labels.homepage-calendar}}<span class="img-block"><img src="../../img/t1-cal.png" alt=""></span></a></h2>
                <p>Find out when our statistics are released and sign-up to receive notifications.</p>
            </article>
            <article class="grid-col desktop-grid-one-third nav--block-home-highlighted-content">
                <h2 class="delta flush"><a class="hide-icon" href="https://www.gov.uk/government/statistics ">{{labels.homepage-other-stats}}<span class="img-block"><img src="../../img/t1-gov-uk--black.png" alt="" class="no-border"></span></a></h2>
                <p>Find official statistics produced by other government departments.</p>
            </article>
            <article class="grid-col desktop-grid-one-third nav--block-home-highlighted-content">
                <h2 class="delta flush"><a href="/about/localstatistics">{{labels.local-stats-header}}<span class="img-block"><img src="../../img/t1-local.png" alt=""></span></a></h2>
                <p>{{labels.local-stats-text}}</p>
            </article>
            <article class="grid-col desktop-grid-one-half nav--block-home-highlighted-content oldie-clearleft">
                <h2 class="delta flush"><a href="http://www.ons.gov.uk/ons/guide-method/census/index.html">{{labels.homepage-census}}<span class="img-block"><img src="../../img/t1-census.png" alt=""></span></a></h2>
                <p>{{labels.homepage-census-sum}}</p>
            </article>
            <article class="grid-col desktop-grid-one-half nav--block-home-highlighted-content">
                <h2 class="delta flush"><a href="http://visual.ons.gov.uk ">{{labels.homepage-visual}}<span class="img-block"><img src="../../img/t1-visual-ons.png" alt=""></span></a></h2>
                <p>{{labels.homepage-visual-sum}}</p>
            </article>

            <!-- /grid-wrap -->
        </div>
        <!-- /section -->
    </div>
</div>
<!-- wrapper -->
