<div class="page-header">
    <div class="wrapper">
        <h1 class="page-header__title flush--half--bottom">Welcome to the Office for National Statistics</h1>
        <p>{{md description.summary}}</p>
    </div>
    <!-- / wrapper -->
</div>
<!-- panel -->

{{!-- Dynamic stastical highlights --}}
<div class="wrapper panel--mar">
    <!-- grid-wrap -->
    {{!-- <h2>Statistical highlights</h2> --}}
    <div class="grid-wrap grid-wrap--home-hero panel--separated--bottom">
        <!-- grid-col -->
        {{#each sections}}
        <div class="grid-col grid-col--home-hero tablet-wide-grid-one-fifth">
            <article class="nav-panel nav-panel--stats nav-panel--home-hero sectioned">
                {{#resolve statistics.uri filter="description"}}
                <div class="stat__wrap--home clickable-wrap">
                    <!-- add to dl -->
                    <!-- change to dt -->
                    <dl>
                        <dt class="nav-panel__header gamma flush equal-height">
                        {{description.title}}
                        </dt>
                        <!-- change to dd's -->
                        <dd>
                        <span class="stat__figure--home block">
                            {{description.preUnit}} <span class="stat__figure-enhance">{{description.number}}</span> {{description.unit}}
                        </span>
                        <span class="stat__description block">
                            {{description.date}}
                        </span>
                        <a class="js-enhance--hide" href="{{statistics.uri}}">More info</a>
                        <div style="height:155px;" >
                        {{> partials/highcharts/sparkline}}
                        </div>
                        </dd>
                    </dl>
                </div>
                {{/resolve}}
                <footer class="nav-panel__footer-home-hero">
                {{#resolve theme.uri filter="title"}}
                    <a href="{{theme.uri}}">Explore {{title}}</a>
                {{/resolve}}
                </footer>
            </article>
            <!-- grid-col -->
        </div>
        {{/each}}
        <!-- /grid-wrap -->
        <!-- /panel-->
    </div>
</div>
