                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="news" class="background--prim">
        <section>
            <div class="wrapper">
                <div class="col-wrap">
                    <h2 class="col margin-bottom--1">News and events</h2>
                    <div class="col col--md-23 col--lg-29 height-md--42 margin-bottom--2 margin-left-md--1 padding-top-sm--2 padding-top-md--2 padding-right-md--1 padding-bottom-sm--1 padding-bottom-md--1 padding-left-sm--1 padding-left-md--1 background--white js-hover">
                        {{#if sections.0.title}}
                            {{!-- Ordinary link --}}
                            {{#if sections.0.image}}
                                {{#resolve sections.0.image}}
                                    <div class="height--19 overflow--hidden">
                                        <img class="width-sm--21 width-md--21 width-lg--27"
                                             src="/resource?uri={{uri}}.{{files.0.fileType}}" alt="{{altText}}">
                                    </div>
                                {{/resolve}}
                            {{/if}}
                            <h3 {{#if sections.0.image}}class="margin-top-md--3"{{/if}}><a
                                    href="{{sections.0.uri}}">{{sections.0.title}}</a></h3>
                            <p class="margin-top--0">{{sections.0.text}}</p>
                        {{else}}
                            {{!-- Link to timeseries --}}
                            {{#resolve sections.0.uri filter="description"}}
                                <dl class="box__content box__content--homepage padding-top-md--19">
                                    <dt class="tiles__title-dt margin-left-sm--1 margin-left-md--1">
                                        <a href="{{uri}}">{{description.title}}</a>
                                    </dt>
                                    <!-- TODO change to dd's -->
                                    <dd class="margin-left-sm--1 margin-left-md--1">
                                        <span class="tiles__preunit--home">{{description.preUnit}}</span>
                                        <span class="tiles__figure--home stat__figure-enhance">{{description.number}}</span>
                                        <span class="tiles__unit--home">{{description.unit}}</span>
                                        <span class="tiles__date--home">
                                            {{description.date}}
                                        </span>
                                        <a class="js-enhance--hide" href="{{statistics.uri}}">More info</a>
                                        <div class="sparkline-holder">
                                            {{> partials/highcharts/sparkline}}
                                        </div>
                                    </dd>
                                </dl>
                            {{/resolve}}
                        {{/if}}
                    </div>
                    <div class="col col--md-23 col--lg-29 height-md--42 margin-bottom--2 margin-left-md--1 padding-top-sm--2 padding-top-md--2  padding-right-sm--1 padding-right-md--1 padding-bottom-sm--1 padding-bottom-md--1 padding-left-sm--1 padding-left-md--1 background--white js-hover">
                        {{#if sections.1.image}}
                            {{#resolve sections.1.image}}
                                <div class="height--19 overflow--hidden">
                                    <img class="width-sm--21 width-md--21 width-lg--27"
                                         src="/resource?uri={{uri}}.{{files.0.fileType}}" alt="{{altText}}">
                                </div>
                            {{/resolve}}
                        {{/if}}
                        <h3 {{#if sections.1.image}}class="margin-top-md--3"{{/if}}><a href="{{sections.1.uri}}">{{sections.1.title}}</a></h3>
                        <p class="margin-top--0">{{sections.1.text}}</p>
                    </div>
                    <div class="col col--md-15 col--lg-19 height-md--42 margin-bottom--2 margin-left-md--1 padding-top-sm--2 padding-top-md--2 padding-right-sm--1  padding-right-md--1 padding-bottom-sm--1 padding-bottom-md--1 padding-left-sm--1 padding-left-md--1 background--white js-hover">
