	{{!-- Related link and local box --}}
	{{#if_any relatedDocuments relatedData relatedDatasets relatedMethodology}}
	<div class="slate--alabaster">
		<div class="wrapper">
			<h3>Related</h3>
			<div class="col-wrap">
			{{#if_any relatedData relatedDatasets}}
			<div class="col {{#if_all relatedDocuments relatedData relatedDatasets relatedMethodology}}col--lg-one-third {{else}}col--lg-half {{/if_all}} tiles__item tiles__item--nav-type">
				<h4 class="tiles__title-h3 tiles__title-h3--nav">Data</h4>
				<div class="tiles__content tiles__content--nav">
					<ul class="list--neutral">
						{{#each relatedData}}
						{{#resolve this.uri filter="description"}}
						<li class="flush"><a href="{{uri}}">{{#if description.cdid}}{{description.cdid}}: {{/if}}{{description.title}}</a></li>
						{{/resolve}}
						{{/each}}
						{{#each relatedDatasets}}
						{{#resolve this.uri filter="description"}}
						<li class="flush"><a href="{{uri}}">{{#if description.datasetId}}{{description.datasetId}}: {{/if}}{{description.title}}</a></li>
						{{/resolve}}
						{{/each}}
					</ul>
				</div>
			</div>
			{{/if_any}}
			{{#if relatedDocuments}}
			<div class="col {{#if_all relatedDocuments relatedData relatedDatasets relatedMethodology}}col--lg-one-third {{else}}col--lg-half {{/if_all}} tiles__item tiles__item--nav-type">
				<h4 class="tiles__title-h3 tiles__title-h3--nav">Statistical bulletins and articles</h4>
				<div class="tiles__content tiles__content--nav">
					<ul class="list--neutral">
						{{#each relatedDocuments}}
			            {{#resolve this.uri filter="title"}}
			            <li class="flush"><a href="{{uri}}">{{title}}{{#if edition}}{{#if_ne edition 'yes'}}: {{edition}}{{/if_ne}}{{/if}}</a></li>
			            {{/resolve}}
			            {{/each}}
					</ul>
				</div>
			</div>
			{{/if}}
			{{#if relatedMethodology}}
			<div class="col {{#if_all relatedDocuments relatedData relatedDatasets relatedMethodology}}col--lg-one-third {{else}}col--lg-half {{/if_all}} tiles__item tiles__item--nav-type">
				<h4 class="tiles__title-h3 tiles__title-h3--nav">Methodology</h4>
				<div class="tiles__content tiles__content--nav">
	                <ul class="list--neutral">
	                    {{#each relatedMethodology}}
	                    {{#resolve this.uri filter="title"}}
	                    <li class="flush"><a href="{{uri}}" title="{{title}}">{{title}}</a></li>
	                    {{/resolve}}
	                    {{/each}}
	                </ul>
				</div>
			</div>
	        {{/if}}
		</div>
	</div>
	{{/if_any}}
</div>

