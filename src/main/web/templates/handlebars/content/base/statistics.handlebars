{{#partial "block-intro-secondary"}}
	{{#block "block-alert"}}
		{{!-- Latest release flag, corrections and notices --}}
		{{> partials/alert}}
	{{/block}}

	{{#block "block-metadata"}}
		<div class="meta-wrap">
			<div class="wrapper">
				<div class="col-wrap">
					{{!-- NS logo --}}
					{{#if description.nationalStatistic}}
					<p class="col col--md-4 col--lg-4 padding-left">
						<img class="meta__image" src="/node_modules/ONS-Pattern-Library/dist/img/national-statistics.png" alt="National Statistics logo"/>
					</p>
					{{/if}}
					{{!-- Contact --}}
					<p class="col {{#if description.nationalStatistic}}col--md-8 col--lg-11{{else}}col--md-12 col--lg-15{{/if}} meta__item">
						<span>{{labels.meta-contact}}: </span><br/><a href="mailto:{{description.contact.email}}">{{#if description.contact.name}}{{description.contact.name}}{{else}}{{description.contact.email}}{{/if}}</a>
					</p>
					{{!-- Release date --}}
					<p class="col col--md-12 col--lg-15 meta__item">
						<span>{{labels.release-date}}: </span><br/>{{df description.releaseDate}}<br/>
					</p>

					{{#block "block-next-release"}}
						{{!-- Next release --}}
						<p class="col col--md-12 col--lg-15 meta__item">
							<span>{{labels.release-next}}: </span><br/>{{#if description.nextRelease}}{{description.nextRelease}}{{else}}To be announced{{/if}}
						</p>
					{{/block}}
					
					
					{{#block "block-additonal-metadata"}}{{/block}}
					
				</div>
			</div> {{!-- /wrapper --}}
		</div> {{!-- /meta-wrap --}}
	{{/block}}
{{/partial}}
{{!-- Inheriting from base handlebars template --}}
{{> content/base/content showType=true}}