{{#partial "block-additonal-metadata"}}
	{{!-- Print and download --}}
	<p class="col col--md-12 col--lg-15 print--hide meta__item">
		<a href="" id="jsEnhancePrint" class="link-complex nojs-hidden js-enhance--show">
			Print this chapter
		</a>
		<br class="nojs-hidden js-enhance--show"/>
		<a href="{{uri}}/pdf" class="link-complex">
			{{labels.dl-pdf}}
		</a>
	</p>
{{/partial}}


{{#partial "block-content"}}
	{{!-- TABLE OF CONTENTS --}}
	<div class="wrapper">
		<div class="col-wrap">
			<div class="col table-of-contents print--avoid-break">
				<p class="print--hide">
					{{#each breadcrumb}}
					{{#if @last}}
					{{labels.compendium-return}} <a href="{{uri}}">{{description.title}}</a>
					{{/if}}
					{{/each}}
				</p>
				<h2 class="table-of-contents__title">{{labels.toc}}</h2>
				<ol id="toc" class="table-of-contents__list">
					{{#each sections}}
					<li class="table-of-contents__item">
						<a href="#{{slugify title}}" class="jsEnhanceAnimateScroll">{{title}}</a>
					</li>
					{{/each}}
					{{#if accordion}}
					{{#each accordion}}
					<li class="table-of-contents__item">
						<a href="#{{slugify title}}" class="jsEnhanceAnimateScroll expand-accordion">{{title}}</a>
					</li>
					{{/each}}
					{{/if}}
					{{#if relatedMethodology}}
					<li class="table-of-contents__item">
						<a href="#methodology" class="jsEnhanceAnimateScroll expand-accordion">Methodology</a>
					</li>
					{{/if}}
				</ol>
			</div>
		</div>
		{{!-- Content --}}
		<!-- <div class="col-wrap"> -->
		<article class="col col--md-36 col--lg-39 page-content__main-content">
			{{#each sections}}
			<section id="{{slugify title}}" class="section__content--markdown">
				<header>
					<h2><span class="section__content-number">{{@index_1}}.</span> {{title}}</h2>
				</header>
				{{md markdown}}
				<a class="print--hide jsEnhanceAnimateScroll" href="#toc" title="{{labels.back-to-toc}}">{{labels.back-to-toc}}</a>
			</section>
			{{/each}}
			<!-- Accordion -->
			{{#if_any accordion relatedMethodology}}
			<div class="accordion__container">
				{{#each accordion}}
				<section id="{{slugify title}}" class="accordion is-collapsed section__content--markdown">
					<h2 class="accordion__title" aria-controls="content-{{@index_1}}">
					<span class="section__content-number">{{nf (add sections.size @index_1)}}.</span>
					{{title}}
					</h2>
					<div class="accordion__content panel--bottom-mar-small" aria-labelledby="sc-{{@index_1}}">
						{{md markdown}}
						<a class="print--hide jsEnhanceAnimateScroll" href="#toc" title="{{labels.back-to-toc}}" class="">{{labels.back-to-toc}}</a>
					</div>
				</section>
				{{/each}}
				{{#if relatedMethodology}}
				<section id="methodology" class="accordion is-collapsed section__content--markdown">
					<h2 class="accordion__title" aria-controls="content-{{@index_1}}">
					{{!-- TODO Related methodology number not working --}}
					{{!-- <span class="section__content-number">{{nf (add sections.size relatedMethodology.size)}}.</span> --}}
					Methodology
					</h2>
					<div class="accordion__content panel--bottom-mar-small" aria-labelledby="sc-{{@index_1}}">
						<ul class="list--neutral">
							{{#each relatedMethodology}}
							{{#resolve this.uri filter="description"}}
							<li><a href="{{absolute uri}}">{{description.title}}</a></li>
							{{/resolve}}
							{{/each}}
						</ul>
						<a class="print--hide jsEnhanceAnimateScroll" href="#toc" title="{{labels.back-to-toc}}">{{labels.back-to-toc}}</a>
					</div>
				</section>
				{{/if}}
			</div>
			{{/if_any}}
		</article>
		{{!-- Sidebar --}}
		<div class="col col--md-11 col--lg-20">
			{{!-- Related data --}}
			{{> partials/related/data }}
			{{!-- Contact details --}}
			{{> partials/contact }}
		</div> {{!-- /col --}}
		{{!-- Bottom links: related documents and local stats --}}
		<div class="col-wrap">
			{{#if relatedDocuments}}
			<div class="col col--md-half col--lg-two-thirds">
				{{> partials/related/documents }}
			</div>
			{{/if}}
			<div class="col col--md-half col--lg-one-third">
				{{> partials/local-box}}
			</div>
		</div>
	</div>
{{/partial}}


