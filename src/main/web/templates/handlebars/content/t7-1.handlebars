<main id="main" role="main" tabindex="-1">

	<div class="page-intro">
		<div class="wrapper">
            <div class="col-wrap">
                <div class="col">
                    {{!-- Breadcrumb --}}
                    {{> partials/breadcrumb}}

                    {{!-- Title --}}
                    <h1 class="page-intro__title margin-bottom--double">{{description.title}}{{#if description.edition}}: {{description.edition}}{{/if}}</h1>
                </div>
            </div>
        </div> {{!-- /wrapper --}}

        {{!-- METADATA --}}
        <div class="meta-wrap">
            <div class="wrapper">
                <div class="col-wrap">

                    {{!-- First line of metadata --}}
                    <p class="col col--md-11 col--lg-14 meta__item">
                        <span>{{labels.meta-contact}}: </span></br>
                        <a href="mailto:{{description.contact.email}}">{{#if description.contact.name}}{{description.contact.name}}{{else}}{{description.contact.email}}{{/if}}</a>
                    </p>

                    <p class="col col--md-11 col--lg-14 meta__item">
                        <span>{{labels.qmi-last-revised}}: </span><br/>{{df description.lastRevised}}
                    </p>

                    <p class="col col--md-11 col--lg-14 meta__item">
                        <a href="{{downloads.0.file}}">{{downloads.0.title}}</a> ({{fs downloads.0.file}} {{fe downloads.0.file}})
                    </p>

                </div>
            </div>


            {{!-- Second line of metadata (Methodology background) --}}
			{{#if_any description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}

                <div class="wrapper">
                    <h2 class="flush">{{labels.qmi-meth-background}}</h2>

                    <div class="col-wrap">

                        {{!-- {{#if description.nationalStatistic}}
                             <div class="col {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--lg-4{{else}}col--lg-3{{/if_all}} margin-left padding-top--half">
                                 <img class="meta__image"
                                      src="/node_modules/ONS-Pattern-Library/ui/img/national-statistics.png"
                                      alt="National Statistics logo"/>
                             </div>
                         {{/if}} --}}

                        {{#if description.nationalStatistic}}
                            <div class="col col--md-4 col--lg-4">
                                <img class="meta__image padding-left padding-top--half"
                                     src="/node_modules/ONS-Pattern-Library/ui/img/national-statistics.png"
                                     alt="National Statistics logo"/>
                            </div>
                        {{/if}}
                        {{#if description.surveyName}}
                            <p class="col {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--md-9 col--lg-11{{else}}col--md-11 col--lg-14{{/if_all}} meta__item">
                                <span>{{labels.qmi-survey-name}}: </span><br/>
                                {{description.surveyName}}
                            </p>
                        {{/if}}
                        {{#if description.frequency}}
                            <p class="col {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--md-9 col--lg-11{{else}}col--md-11 col--lg-14{{/if_all}} meta__item">
                                <span>{{labels.qmi-frequency}}: </span><br/>{{description.frequency}}
                            </p>
                        {{/if}}
                        {{#if description.compilation}}
                            <p class="col {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--md-9 col--lg-11{{else}}col--md-11 col--lg-14{{/if_all}} meta__item">
                                <span>{{labels.qmi-compiled}}: </span><br/>{{description.compilation}}
                            </p>
                        {{/if}}
                        {{#if description.sampleSize}}
                            <p class="col {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--md-9 col--lg-11{{else}}col--md-11 col--lg-14{{/if_all}} meta__item">
                                <span>{{labels.qmi-sample-size}}: </span><br/>
                                {{description.sampleSize}}
                            </p>
                        {{/if}}
                        {{#if description.geographicCoverage}}
                            <p class="col {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--md-9 col--lg-11{{else}}col--md-11 col--lg-14{{/if_all}} meta__item"> <span>{{labels.qmi-geog}}: </span><br/>{{description.geographicCoverage}}
                            </p>
                        {{/if}}
                    </div>
                </div>
            {{/if_any}}
		</div>
	</div>

    <div class="page-content">
        <div class="wrapper">
            <div class="col-wrap">

                {{!-- MARKDOWN --}}
                <div class="col {{#if_any relatedDocuments relatedDatasets description.contact}}col--md-two-thirds col--lg-two-thirds{{/if_any}}">
                    <section class="section__content--static-markdown">
                        {{#each markdown}}
                            {{md this}}
                        {{/each}}
                    </section>

                    <div class="tiles__item tiles__item--nav-type col--md-31 col--lg-19 flush-col">
                        <h3 class="tiles__title-h3 tiles__title-h3--nav">{{labels.qmi-download}}</h3>

                        <div class="tiles__content--nav">
                            <ul class="list--neutral">
                                {{#each downloads}}
                                    <li class="flush--third--bottom">
                                        <a href="/file?uri={{file}}" title="{{title}}">{{title}}</a>
                                    </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>

                {{!-- 'RELATED' TILES --}}
                {{#if_any relatedDocuments relatedDatasets description.contact}}
                    <div class="col col--md-one-third col--lg-one-third margin-top">
                        {{!-- Related documents --}}
                        {{#if relatedDocuments}}
                            <div class="tiles__item tiles__item--nav-type flush-col">
                                <h3 class="tiles__title-h3 tiles__title-h3--nav">{{labels.qmi-docs-using}}</h3>

                                <div class="tiles__content--nav">
                                    <ul class="list--neutral">
                                        {{#each relatedDocuments}}
                                            {{#resolve this.uri filter="title"}}
                                                <li><a href="{{uri}}">{{title}}{{#if edition}}: {{edition}}{{/if}}</a></li>
                                            {{/resolve}}
                                        {{/each}}
                                    </ul>
                                </div>
                            </div>
                        {{/if}}

                        {{#if relatedDatasets}}
                            <div class="tiles__item tiles__item--nav-type flush-col">
                                <h3 class="tiles__title-h3 tiles__title-h3--nav">{{labels.qmi-data-using}}</h3>

                                <div class="tiles__content--nav">
                                    <div class="list--neutral">
                                        {{#each relatedDatasets}}
                                            {{#resolve this.uri filter="title"}}
                                                <li class="flush--third--bottom"><a href="{{uri}}">{{title}}</a></li>
                                            {{/resolve}}
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        {{/if}}
                        
                        {{!-- Contact details --}}
                        {{#if description.contact}}
                            <div class="tiles__item tiles__item--nav-type flush-col">
                                <h3 class="tiles__title-h3 tiles__title-h3--nav">{{labels.qmi-contact}}</h3>

                                <div class="tiles__content--nav">
                                    <address>
                                        {{#if description.contact.name}}{{description.contact.name}}<br/>{{/if}}
                                        <a href="mailto:{{description.contact.email}}">{{description.contact.email}}</a><br/>
                                        {{#if description.contact.telephone}}{{labels.phone}}: {{description.contact.telephone}}{{/if}}
                                    </address>
                                </div>
                            </div>
                        {{/if}}
                    </div>
                {{/if_any}}
            </div>
        </div>
    </div>

