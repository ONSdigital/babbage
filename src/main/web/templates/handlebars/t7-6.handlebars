{{> partials/header}}
<main id="main" role="main" tabindex="-1">
	<div class="page-header slate slate--red">
		<div class="wrapper">
			{{> partials/breadcrumb}}
			<h1 class="page-header__title flush--half--bottom">{{description.title}}</h1>
			<div class="grid-wrap">
				<p class="grid-col tablet-grid-one-quarter {{#if description.nationalStatistic}}page-header__meta-block-with-img{{/if}}">
			    {{#if description.nationalStatistic}}
					<img src="/node_modules/ONS-Pattern-Library/dist/img/national-statistics.png" alt="National Statistics logo" />
					{{/if}}
					<span>Contact: </span><br/><a href="mailto:{{description.contact.email}}">{{#if description.contact.name}}{{description.contact.name}}{{else}}{{description.contact.email}}{{/if}}</a>
				</p>
				<p class="grid-col tablet-grid-one-quarter divider--border-left">
					<span>Last revised: </span><br/>{{df lastRevised}}<br/>
					<a class="print-hidden" href="#">previous versions</a>
				</p>
			</div>
		</div>
	</div>
	<!-- /page-header 'slate' -->
	<div class="wrapper panel--mar">
		<div class="grid-wrap">
			<div class="grid-col desktop-grid-full-width print-links">
				{{md description.summary}}
			</div>
		</div>
		<!-- table of contents -->
		<div class="panel--separated--bottom">
			<h2>In this section</h2>
			<ol id="toc" class="table-of-contents-ordered-list">
				{{#each sections}}
				<li>
					<a href="#{{slugify title}}">{{title}}</a>
				</li>
				{{/each}}
				{{#if accordion}}
					{{#each accordion}}
					<li>
						<a href="#{{slugify title}}">{{title}}</a>
					</li>
					{{/each}}
				{{/if}}
			</ol>
		</div>
		<!-- /table of contents -->
		<div class="grid-wrap print-links s">
			<article class="grid-col desktop-grid-two-thirds tablet-grid-full-width">
				{{#each sections}}
					{{!-- Prevent bottom border on last section before accordion --}}
					{{#if @last}}
					<section id="{{slugify title}}" class="panel--pad">
					{{else}}
					<section id="{{slugify title}}" class="panel--separated--bottom panel--pad">
					{{/if}}
						<header>
							<h2>{{@index_1}}. {{title}}</h2>
						</header>
						{{md markdown}}
						<a class="print-hidden" href="#toc" title="Back to table of contents">Back to table of contents</a>
					</section>
				{{/each}}
				<!-- Accordion -->
				{{#if accordion}}
				<div class="panel--mar">
					{{#each accordion}}
					<section id="{{slugify title}}" class="accordion is-collapsed">
						<h2 class="accordion__title" aria-controls="content-{{@index}}">{{title}}</h2>
						<div class="accordion__content" aria-labelledby="sc-{{@index}}">
							{{md markdown}}
							<a class="print-hidden" href="#toc" title="Back to table of contents">Back to table of contents</a>
						</div>
					</section>
					{{/each}}
				</div>
				{{/if}}
			</article><!-- /grid-two-thirds -->
			<div class="grid-col desktop-grid-one-third panel--top-mar">
				<div class="box solid box--green--separated--left">
					<div class="box__inner border box--padded">
						<h3 class="box__section__header">
							Data related to this content
						</h3>
						<div class="box__content">
							<ul class="list--neutral">
								{{#each data}}
								<li class="flush--third--bottom"><a href="{{this.uri}}">{{this.title}}</a></li>
								{{/each}}
							</ul>
						</div>
						<!-- /box__content -->
					</div>
					<!-- /box__inner -->
				</div>
				<div class="box solid box--teal--separated--left">
					<div class="box__inner border box--padded">
						<h3 class="box__section__header">
							Statistical bulletins related to this content
						</h3>
						<div class="box__content">
							<ul class="list--neutral">
								{{#each relatedBulletins}}
								<li class="flush--third--bottom"><a href="{{this.uri}}">{{this.title}}</a></li>
								{{/each}}
							</ul>
						</div>
						<!-- /box__content -->
					</div>
					<!-- /box__inner -->
				</div>
				<div class="box solid box--purple--separated--left">
					<div class="box__inner border box--padded">
							<h3 class="box__section__header">
								Download our guide
							</h3>
						<!-- /box__header -->
						<div class="box__content">
							<ul class="list--neutral">
								{{#each downloads}}
								<li class="flush--third--bottom"><a href="{{this.uri}}">{{this.title}}</a></li>
								{{/each}}
							</ul>
						</div>
						<!-- /box__content -->
					</div>
					<!-- /box__inner -->
				</div>
				<div class="box box--padded sectioned">
					<h3 class="box__section__header">
						Contact details for this methodology
					</h3>
					<address>
						{{#if description.contact.name}}{{description.contact.name}}<br/>{{/if}}
            <a href="mailto:{{description.contact.email}}">{{description.contact.email}}</a></br>
            {{#if description.contact.telephone}}Telephone: {{description.contact.telephone}}{{/if}}
					</address>
				</div>
				<!-- /box--lifted -->
			</div><!-- /grid-one-third -->
		</div><!-- /grid-wrap -->
	</div>
	<!-- /wrapper -->
</main>
{{> partials/footer}}
