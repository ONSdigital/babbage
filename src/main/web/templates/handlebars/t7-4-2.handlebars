{{> templates/handlebars/partials/header}}
<div class="page-header slate slate--red">
	<div class="wrapper">
		{{> templates/handlebars/partials/breadcrumb}}
		<h1 class="page-header__title flush--half--bottom">{{name}}</h1>
		{{> templates/handlebars/partials/social-icons}}
	</div>
	<!-- /wrapper -->
</div>
<!-- /page-header -->
<div class="wrapper panel--mar ">
	<div class="grid-wrap">
		<div class="grid-col desktop-grid-full-width">
			<p>
				{{lede}}
			</p>
		</div>
		<!-- /desktop-grid-full-width -->
		<div class="grid-col desktop-grid-two-thirds">
			<div class="grid-wrap">
				{{#each sections}}
				<div class="grid-col desktop-grid-one-half nav--block-landing--pairs">
					<article class="box">
						<header class="box__header">
							<h3><a href="{{uri}}">{{name}}</a></h3>
						</header>
						<div class="box__content">
							<p>
								{{description}}
							</p>
						</div>
					</article>
				</div>
				<!-- /desktop-grid-one-half -->
				{{/each}}
			</div>
			<!-- /grid-wrap -->
		</div>
		<!-- /desktop-grid-two-thirds -->
		{{#if box}}
		<div class="grid-col desktop-grid-one-third">
			<article class="box solid box--purple--separated--left">
				<div class="box__inner border box--padded">
					<h3>{{title}}</h3>
					{{content}}
				</div>
				<!-- / box__inner border box--padded -->
			</article>
			<!-- / box solid box--purple--separated--left -->
		</div>
		<!-- /desktop-grid-one-third -->
		{{/if}}
		<div class="grid-col desktop-grid-two-thirds">
			<div class="panel panel--separated--top">
				<div class="grid-wrap">
					<div class="grid-col desktop-grid-one-half">
						<h3>{{more.title}}</h3>
					</div>
					<!-- /desktop-grid-one-half -->
					<div class="grid-col desktop-grid-one-half">
						<ul class="list--neutral flush">
							{{#each more.items}}
							<li><a href="{{uri}}">{{title}}</a></li>
							{{/each}}
						</ul>
					</div>
					<!-- /desktop-grid-one-half -->
				</div>
				<!-- /grid-wrap -->
			</div>
			<!-- /panel--separated--top -->
		</div>
		<!-- /desk-grid-two-thirds -->
	</div>
	<!-- /grid-wrap -->
</div>
<!-- /wrapper -->
{{> templates/handlebars/partials/footer}}
