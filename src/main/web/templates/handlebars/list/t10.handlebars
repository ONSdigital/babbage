<main id="main" role="main" tabindex="-1">
	{{!-- {{#if parameters.q.0}} --}}
	<h1 class="visuallyhidden">Search results</h1>
	{{!-- {{json this}} --}}

	<div class="page-content">
		<div class="wrapper">

			{{!-- NUMBER OF RESULTS --}}
			<div class="col-wrap">
				<div class="col col--one margin-top">
					{{#if results}}
						<p class="padding-left inline">
							{{#if suggestionBased}}
								{{labels.search-no-results}} '{{parameters.q.0}}'.
								</br> 
								{{labels.search-showing-lrg}} {{numberOfResults}} {{labels.search-result}} '{{suggestion}}'

								{{#if types}}
									{{labels.search-showing-sml}}
									{{#each types}}
										{{#if_eq this 'bulletin'}}
											statistical bulletin
										{{/if_eq}}
										{{#if_ne this 'bulletin'}}
											{{this}}
										{{/if_ne}}
									{{/each}}
								{{/if}}. {{!-- /if types --}}

							{{else}}

								{{numberOfResults}} {{labels.search-result}} '{{parameters.q.0}}'

								{{#if parameters.type}}
									{{labels.search-showing-sml}}
									{{#each parameters.type}}
										{{#if_eq this 'bulletin'}}
											statistical bulletins
										{{/if_eq}}
										{{#if_ne this 'bulletin'}}
											{{this}}
										{{/if_ne}}
									{{/each}}
								{{/if}}. {{!-- /if parameters.type --}}

							{{/if}} {{!-- /if suggestionBased --}}
						</p>

						<div class="sort float-right">
							<form class="sort__form">
								<input class="sort__input" type="hidden" name="q" value="{{parameters.q.0}}">
								{{> list/filters/sort}}
							</form>
						</div>

					{{else}}
						<p>
							{{labels.search-no-results}} '{{parameters.q.0}}'.
						</p>
					{{/if}} {{!-- /if results --}}
				</div>
			</div>

			{{!-- FILTERS --}}
			<div class="search-filter slate--iron-light col col--md-12 col--lg-18">
				<form class="search-filter__form">
					<div class="col col--md-10 col--lg-10">
						<h2 class="flush">Refine results</h2>
					</div>
					<div class="col col--md-10 col--lg-6">
						<a href="/search?q={{parameters.q.0}}" value="Reset" class="search-filter__button--clear btn btn--thin">{{labels.search-refine-clear}}</a>
					</div>

					<h3 class="clear-left">{{labels.search-refine-types}}</h3>
					<ul class="list--neutral">
						<li>
							<input type="checkbox" name="type" value="bulletin" id="checkbox-statsbulletin" {{#contains parameters.type 'bulletin'}}checked{{/contains}} >
							<label for="checkbox-statsbulletin">
								{{labels.bulletin}}
							</label>
						</li>
						<li>
							<input type="checkbox" name="type" value="article" id="checkbox-article" {{#contains parameters.type 'article'}}checked{{/contains}}>
							<label for="checkbox-article">
								{{labels.article}}
							</label>
						</li>
						<li>
							<input type="checkbox" name="type" value="compendium_landing_page" id="checkbox-compendia" {{#contains parameters.type 'compendium_landing_page'}}checked{{/contains}}>
							<label for="checkbox-compendia">
								Compendia
							</label>
						</li>
						<li>
							<input type="checkbox" name="type" value="timeseries" id="checkbox-timeseries" {{#contains parameters.type 'timeseries'}}checked{{/contains}}>
							<label for="checkbox-timeseries">
								Time series
							</label>
						</li>
						<li>
							<input type="checkbox" name="type" value="dataset" id="checkbox-dataset" {{#contains parameters.type 'dataset'}}checked{{/contains}}>
							<label for="checkbox-dataset">
								{{labels.dataset}}
							</label>
						</li>
						<li>
							<input type="checkbox" name="methodology" value="1" id="checkbox-methodology" {{#if parameters.methodology.0}}checked{{/if}} >

							<label for="checkbox-methodology">
								{{labels.methodology}}
							</label>
						</li>
					</ul>

					<p class="flush-bottom">{{labels.search-expand}}:</p>
					<input type="checkbox" name="includeStatics" value="1" id="checkbox-all-content" {{#if parameters.includeStatics.0}}checked{{/if}}>
					<label for="checkbox-all-content">
						{{labels.search-expand-all}}</br>
						({{labels.search-expand-types}})
					</label>

					<button type="submit" class="btn btn--block margin-top">{{labels.search-filter}}</button>
				</form>
			</div>

			{{!-- RESULTS --}}
			<div class="results col col--md-34 col--lg-40 margin-left">
				{{#if results}}

				{{!-- HEADLINE RESULTS --}}
				{{#resolve featuredResult.results.0.uri}}
				<div class="slate--iron-light col--md-36 col--lg-40 clear-left" style="height: 248px;">
					{{!-- Sparkline --}}
					<div class="col col--md-17 col--lg-20">
						{{#resolve items.0.uri assign="series" filter="series"}}
							<a href="{{../uri}}">
								<div style="height: 248px;">
									{{>partials/highcharts/sparkline}}
								</div>
							</a>
						{{/resolve}}
					</div>
					{{!-- Summary --}}
					{{#if series}}
					<div class="col col--md-17 col--lg-20 tiles__item--nav-type-fixed padding-left padding-right">
					{{else}}
					<div class="col col--md-34 col--lg-42">
					{{/if}}
						<h2><a href="{{uri}}">{{description.title}}</a></h2>
						<p>{{description.summary}}</p>
					</div>
				</div>
				{{/resolve}}

				{{!-- MAIN RESULTS --}}
				{{> list/partials/results}}
				{{> list/partials/paginator}}
			</div>


			{{!-- NO RESULTS --}}
			{{else}}

				{{#if parameters.q}}
					<div class="col col--lg-42">
						{{labels.search-no-results}} ‘{{parameters.q.0}}’ </br>
						{{labels.search-try-other}}:
						<ul>
							<li>{{labels.search-diff-words}}</li>
							<li>{{labels.search-remove-filters}}</li>
							{{#unless parameters.includeStatics}}
							<li><a href="/search?q={{parameters.q.0}}{{#each parameters.type}}&type={{this}}{{/each}}{{#if parameters.methodology.0}}&methodology=1{{/if}}&includeStatics=1">{{labels.search-expand-all}}</a></li>
							{{/unless}}
						</ul>
					</div>
				{{/if}}

			{{/if}}

		</div>
	</div>

	{{!-- {{/if}} --}}
</main>