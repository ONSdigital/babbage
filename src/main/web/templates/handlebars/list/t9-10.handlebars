{{#partial "block-main"}}
<div class="tab">
    <div class="wrapper">
        <ul class="list--neutral list--inline flush">
            <li>
                <a href="/search?q={{parameters.q.0}}" class="tab__item">
                    ALL results
                </a>
            </li>
            <li>
                <a href="/searchdata?q={{parameters.q.0}}" class="tab__item tab__item--active">
                    Data
                </a>
            </li>
            <li>
                <a href="/searchpublication?q={{parameters.q.0}}" class="tab__item">
                    Publications
                </a>
            </li>
        </ul>
    </div>
</div> {{!-- /tab --}}
<div class="page-content">
    <div class="wrapper">
        <form>
            <div class="col-wrap print-hidden">
                <div class="col">
                    <div class="col col--md-28 col--lg-38">
                        <h1 class="search-page__title">Search results</h1>
                        {{> list/partials/search-results-text-number result}}
                    </div>
                    {{#if result.results}}
                        <div class="float-right">
                            {{> list/filters/sort}}
                        </div>
                    {{/if}}
                </div>
            </div>
            {{#if_any result.results parameters.filter parameters.topic parameters.toDate parameters.fromDate}}
			<div class="col col--md-12 col--lg-18 margin-bottom">
				<div class="tiles__item tiles__item--nav-type flush-col print--hide">
					<div class="tiles__title-h3 tiles__title-h3--nav">
						<h3 class="inline">Refine results</h3>
						<a href="{{location/pathname}}?q={{parameters.q.0}}" value="Reset" class="btn btn--primary btn--thin btn--narrow btn--small float-right">{{labels.search-refine-clear}}</a>
					</div>
					<div class="tiles__content tiles__content--nav">
						<div class="filters">
							<h4 class="filters__title">Data format</h4>
							<ul class="list--neutral">
                                <li class="filters__item">
									<div class="filters__field">
										<input id="checkbox-timeseries" type="checkbox" name="filter" value="single_time_series" {{#contains parameters.filter 'single_time_series'}}checked{{/contains}} >
										<label for="checkbox-timeseries">
											Time series data
										</label>
									</div>
								</li>
                                <li class="filters__item">
									<div class="filters__field">
										<input id="checkbox-dataset" type="checkbox" name="filter" value="large_dataset" {{#contains parameters.filter 'large_dataset'}}checked{{/contains}}>
										<label for="checkbox-dataset">
											Spreadsheets
										</label>
									</div>
								</li>
								<li>
									<div class="filters__field">
										<input id="checkbox-adhoc" type="checkbox" name="filter" value="adhocs" {{#contains parameters.filter 'adhocs'}}checked{{/contains}} >
										<label for="checkbox-adhoc">
											Commissioned data
										</label>
									</div>
								</li>
							</ul>
                            <input type="hidden" name="q" value="{{parameters.q.0}}">
						</div>
						<button type="submit" class="btn btn--primary btn--thick margin-top-sm--2 margin-top-md--2 js-enhance--hide">{{labels.search-filter}}</button>
					</div>
				</div>
				{{> partials/archives-box}}
			</div>
            {{/if_any}}

			{{!-- RESULTS --}}
			<div class="results col col--md-34 col--lg-40 {{#if_any result.results parameters.filter parameters.topic parameters.toDate parameters.fromDate}}margin-left-md--1{{/if_any}}">
                {{> list/partials/search-results-text-help result}}
				{{> list/partials/results}}
				{{> list/partials/paginator}}
			</div>
		</form>
	</div>
</div>
{{/partial}}
{{!-- Inheriting from base list template --}}
{{> list/base/list}}