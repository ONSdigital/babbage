{{#partial "block-title"}}
	All publications related to {{> partials/location }}
{{/partial}}


{{#partial "block-list-tabs"}}
	<li>
		<a href="datalist{{#if parameters.query.0}}?query={{parameters.query.0}}{{/if}}" class="tab__item">
			Data
		</a>
	</li>
	<li>
		<a href="publication{{#if parameters.query.0}}?query={{parameters.query.0}}{{/if}}" class="tab__item tab__item--active">
			Publications
		</a>
	</li>
{{/partial}}

{{#partial "block-results-text"}}
	<div class="col col--md-28 col--lg-38">
		{{> list/partials/list-results-text-number result resultsLabel="publications" showLocation=true}}
	</div>
{{/partial}}

{{#partial "block-filters"}}
	{{> list/filters/keywords}}
	<h4 class="filters__title">Content types to show</h4>
	{{> list/filters/publications}}
	{{> list/filters/all-releases }}
{{/partial}}

{{!-- Inheriting from base list template --}}
{{> list/base/list tabs=true showBreadcrumb=true breadcrumbLabel="Publications" }}