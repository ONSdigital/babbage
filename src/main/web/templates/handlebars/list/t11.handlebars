{{#partial "block-main"}}
	<div class="page-intro">
		<div class="wrapper">
			<div class="col-wrap">
				<div class="col">
					{{> list/partials/list-page-breadcrumb label="Release calendar"}}
				</div>
			</div>
		</div>
	</div> {{!-- /page-intro --}}

	<div class="alert">
		<div class="wrapper">
			<div class="col-wrap">
				<div class="col">
					<p class="alert__content--large flush-bottom">This calendar is not being maintained and should not be used in place of the current one</p>
				</div>
			</div>
		</div>
	</div>

	<div class="tab">
		<div class="wrapper">
			<p class="float-right flush-bottom">
				<a href="/calendar{{uri}}">
					<span class="icon icon-calendar--dark-small margin-right-md--1"></span>
					Add releases to your calendar (ICS)
				</a>
			</p>
			<ul class="list--neutral list--inline flush">
				<li>
					<a href="/releasecalendar" class="tab__item {{#unless parameters.view.0}}tab__item--active{{/unless}}">
					Published releases
					</a>
				</li>
				<li>
					<a href="/releasecalendar?view=upcoming" class="tab__item {{#if_eq parameters.view.0 "upcoming"}}tab__item--active{{/if_eq}}">
						Upcoming releases
					</a>
				</li>
			</ul>
		</div>
	</div> {{!-- /tab --}}

	<div class="page-content">
		<div class="wrapper margin-top-md--3 print-links">
			<form id="filters">
				<input type="hidden" name="view" value="{{parameters.view.0}}">

				<div class="col col--md-12 col--lg-18 margin-bottom">
					<div class="tiles__item tiles__item--nav-type flush-col print--hide">
						<div class="tiles__title-h3 tiles__title-h3--nav">
							<h3 class="inline">Refine results</h3>
							<a href="/releasecalendar?view={{parameters.view.0}}" value="Reset"
							   class="btn btn--primary btn--thin btn--narrow btn--small float-right">{{labels.search-refine-clear}}</a>
						</div>
						<div class="tiles__content tiles__content--nav">
							{{> list/filters/keywords}}
							{{> list/filters/publish-date}}
							<button type="submit"
									class="btn btn--primary btn--thick margin-top--double">{{labels.search-filter}}</button>
						</div>
					</div>
				</div>
				<div class="results col col--md-34 col--lg-40 margin-left">
					{{> list/partials/results-text}}
					<ul class="list--neutral">
						{{#each result.results}}
							<li class="search--result-item margin-bottom--double">
								<h3 class="inline-block">
									<a href="{{uri}}">{{{description.title}}}
										{{#if description.edition}}
											{{#if_all (ne description.edition 'yes') (ne description.edition '<strong>yes</strong>')}}
												: {{{description.edition}}}
											{{/if_all}}
										{{/if}}
									</a>
								</h3>

								<p class="flush">

									{{#if description.provisionalDate}}
										{{description.provisionalDate}}
									{{else}}
										{{df description.releaseDate}}
									{{/if}}
									<span>
										{{#if description.cancelled}}
											(cancelled)
										{{else}}
											{{#if description.finalised}}
												(confirmed)
											{{else}}
												(provisional)
											{{/if}}
										{{/if}}
									</span>

									{{!-- Amended date notice --}}
									{{#resolve this.uri}}
										{{#if dateChanges}}
											{{#each dateChanges}}
												{{#if @last}}
													<br>
        											<span class="flush">
        												<a href="{{uri}}#datechanges">This date has been changed
															from {{df previousDate}}</a>
        											</span>
												{{/if}}
											{{/each}}
										{{/if}}
									{{/resolve}}
								</p>
							</li>
						{{/each}}
					</ul>
					{{> list/partials/paginator}}
				</div>
			</form>
		</div>
	</div>
{{/partial}}
	{{!-- Inheriting from base list template --}}
	{{> list/base/list}}