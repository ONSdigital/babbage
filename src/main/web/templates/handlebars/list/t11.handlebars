<main id="main" role="main" tabindex="-1">
<div class="wrapper panel--top-mar">
	{{> list/partials/list-page-breadcrumb label="Release calendar"}}
	<!-- / breadcrumb -->
	<h1>Release calendar</h1>
</div>
<!-- /wrapper -->
<div class="wrapper print-links">
	<div class="{{!-- tab-interface --}}">
		<div class="{{!-- tab-pane tab-pane--dual --}}">
			<ul class="list--neutral nav--block--spaced">
				<li>
					<a href="/releasecalendar" class="tab-pane__tab">Published releases</a>
				</li>
				<li>
					<a href="/releasecalendar?view=upcoming" class="tab-pane__tab">Upcoming releases</a>
				</li>
			</ul>
			
			<form id="filters">
				<div class="col col--md-12 col--lg-18 margin-bottom">
					<div class="tiles__item tiles__item--nav-type flush-col print--hide">
						<div class="tiles__title-h3 tiles__title-h3--nav">
							<h3 class="inline">Refine results</h3>
							<a href="/releasecalendar" value="Reset" class="btn btn--primary btn--thin btn--narrow btn--small float-right">{{labels.search-refine-clear}}</a>
						</div>
						<div class="tiles__content tiles__content--nav">
							{{> list/filters/keywords}}
							{{> list/filters/publish-date}}
							<button type="submit" class="btn btn--primary btn--block btn--thick margin-top">{{labels.search-filter}}</button>
						</div>
					</div>
					<!-- /box -->
				</div>
				<!-- /desktop-grid-one-third -->
				<div class="results col col--md-34 col--lg-40 margin-left">
					{{> list/partials/results-text}}
					<ul class="list--neutral">
						{{#each results}}
						<li class="search--result-item margin-bottom--double">
							<h3 class="inline-block"><a href="{{uri}}">{{{description.title}}}
								{{#if description.edition}}
								{{#if_all (ne description.edition 'yes') (ne description.edition '<strong>yes</strong>')}}: {{{description.edition}}}{{/if_all}}
							{{/if}}</a></h3>
							<p class="flush">
								{{df description.releaseDate}}
							</p>
						</li>
						{{/each}}
					</ul>
					{{> list/partials/paginator}}
				</div>
				<!-- /desktop-grid-two-thirds -->
			</form>
			<!-- /grid-wrap -->
		</div>
		<!-- /wrapper panel--mar -->
	</div>
</div>
</main>