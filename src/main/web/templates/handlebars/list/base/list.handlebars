
{{#partial "block-main"}}
	<div class="page-content">
		<div class="wrapper">
			<div class="col-wrap">
				<div class="col">
						{{#if showBreadcrumb}}
							{{> list/partials/list-page-breadcrumb label=breadcrumbLabel}}
						{{/if}}
						<h1 class="search-page__title">{{#block "block-title"}}{{/block}}</h1>
				</div>
			</div>
		</div>

		{{#block "block-alert"}}{{/block}}


		{{#if tabs}}
			<div class="tab">
				<div class="wrapper">
					{{#block "block-tab-menu"}}{{/block}}
					<ul class="list--neutral list--inline flush">
						{{#block "block-list-tabs"}}
							<li>
								<a href="/search?q={{parameters.q.0}}" class="tab__item tab__item--active">
									All results
								</a>
							</li>
							<li>
								<a href="/searchdata?q={{parameters.q.0}}" class="tab__item">
									Data
								</a>
							</li>
							<li>
								<a href="/searchpublication?q={{parameters.q.0}}" class="tab__item">
									Publications
								</a>
							</li>
						{{/block}}
					</ul>
				</div>
			</div>
		{{/if}}

		<div class="wrapper">
			<form id="form">
				<div class="col-wrap print-hidden">
					<div class="col">
						{{#block "block-results-text"}}
							<div class="col col--md-28 col--lg-38">
								{{> list/partials/search-results-text-number result}}
							</div>
						{{/block}}
						{{#block "block-sort"}}
							{{#if result.results}}
							<div class="float-right">
								{{> list/filters/sort}}
							</div>
						{{/if}}
						{{/block}}
					</div>
				</div>
				{{!-- FILTERS --}}
				{{!-- {{#if_any result.results parameters.filter parameters.time_series}} --}}
					<div class="col col--md-12 col--lg-18 margin-bottom">
						<div class="tiles__item tiles__item--nav-type flush-col">
							<input class="sort__input" type="hidden" name="q" value="{{parameters.q.0}}">
							<div class="tiles__title-h3 tiles__title-h3--nav">
								<h3 class="inline">Refine results</h3>
								{{#unless (eq uri "/atoz")}}
									<a href="{{location.pathname}}?q={{parameters.q.0}}" value="Reset" class="btn btn--primary btn--thin btn--narrow btn--small float-right">{{labels.search-refine-clear}}</a>
								{{/unless}}
							</div>

							<div class="tiles__content tiles__content--nav">
								<div class="filters">
									{{#block "block-filters"}}
									{{/block}}
								<button type="submit" class="btn btn--primary btn--thick margin-top-sm--2 margin-top-md--2 js-enhance--hide">{{labels.search-filter}}</button>
								</div>
							</div>
						</div>
						{{> partials/archives-box}}
					</div>
				{{!-- {{/if_any}} --}}
				{{!-- RESULTS --}}
				<div class="results col col--md-34 col--lg-40 margin-left-md--1">
					{{> list/partials/search-results-text-help result}}

					{{#block "block-featured-result"}}
					{{/block}}
					{{!-- MAIN RESULTS --}}
					<!-- /desktop-grid-one-third -->
					<div class="search-results">
						<ul class="list--neutral">
							{{#block "block-results"}}
								{{#each result.results}}
									<li class="search-results__item">
										<h3 class="search-results__title">
										<a href="{{uri}}">{{{description.title}}}
											{{#if description.edition}}
												{{#if_all (ne description.edition 'yes') (ne description.edition '<strong>yes</strong>')}}: {{{description.edition}}}{{/if_all}}
										{{/if}} {{#if description.latestRelease}}(Latest release){{/if}}</a></h3>

										{{#if partOf}}
										<p>
											<a href="{{uri}}">{{{description.title}}}</a><span class="icon-search-1"></span>
										</p>
										{{/if}}

										<p class="search-results__meta">
											{{> type-label type_code=this._type }}
											{{#if description.cdid}}
											| Series ID: {{description.cdid}}
											{{/if}}
											{{#if_any description.releaseDate description.lastRevised}} |
												{{#if description.releaseDate}}Released on {{df description.releaseDate}}
												{{else}}Revised on {{df description.lastRevised}}
												{{/if}}
											{{/if_any}}
											{{#if description.reference}}| Ref: {{{description.reference}}}{{/if}}
										</p>

										<div class="search-results__summary">
											{{md description.summary}}
										</div>

										{{#if description.keywords}}
											<p class="search-results__keywords">
												Keywords: {{#each description.keywords}}{{{this}}}{{#unless @last}}, {{/unless}}{{/each}}
											</p>
										{{/if}}
									</li>
								{{/each}}
							{{/block}}
						</ul>
					</div>
					{{> list/partials/paginator}}
					<!-- /desktop-grid-two-thirds -->
				</div>
			</form>
		</div>
	</div>
{{/partial}}

{{!-- Inheriting from base template --}}
{{> base/base}}