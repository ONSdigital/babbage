{{#minify}}
    {{!-- Need separate resolve for list page title location in taxonomy because breadcrumb isn't available from main.handlebars --}}
    {{#resolve (parentPath uri) filter="title"}}
        {{#if upper}}
            {{title}}{{#if edition}}: {{edition}}{{/if}}
        {{else}}
            {{lower title}}
        {{/if}}
    {{/resolve}}
{{/minify}}