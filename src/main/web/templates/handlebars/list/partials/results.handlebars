<ul class="list--neutral">
	{{#each results}}
	<li>
		<h3 class="flush"><a href="{{uri}}">{{description.title}}
			{{#if description.edition}}
			{{#if_ne description.edition 'yes'}}: {{description.edition}}{{/if_ne}}
		{{/if}}</a></h3>
		<span class="lozenge">{{> type-label type=this.type}}</span>
		{{#if partOf}}
		<p class="micro flush">
			<a href="{{uri}}">[{{description.title}}]</a><span class="icon-search-1"></span>
		</p>
		{{/if}}
		<p class="mini flush description">
			Released: {{df description.releaseDate}} {{#if description.reference}}Ref: {{description.reference}}{{/if}}
		</p>
		{{md description.summary}}
		<p class="mini flush">
		  Keywords: {{#each description.keywords}}{{this}}  {{/each}}
		</p>
	</li>
	{{/each}}
</ul>