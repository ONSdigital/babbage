<h4 class="filters__title">Updated</h4>
<div class="filters__field">
	<select class="input inline" id="select-topic" name="updated">
		<option value="" >Select last updated</option>
		<option value="today" {{#if_eq parameters.updated.0 "today"}}selected{{/if_eq}}>New</option>
		<option value="week" {{#if_eq parameters.updated.0 "week"}}selected{{/if_eq}}>7 days</option>
		<option value="month" {{#if_eq parameters.updated.0 "month"}}selected{{/if_eq}}>Last month</option>
		<option class="js-enhance--show" value="custom" {{#if_eq parameters.updated.0 "custom"}}selected{{/if_eq}}>Custom</option>
	</select>
</div>

<div class="js-from-to-filters">
{{#if_eq parameters.updated.0 "custom"}}
	{{> list/filters/publish-date}}
{{/if_eq}}
</div>