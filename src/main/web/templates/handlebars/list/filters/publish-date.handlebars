{{!-- <h4 class="margin-bottom--0">{{labels.release-date}}</h4> --}}
<div class="margin-top--1">
    <fieldset>
        <legend class="filters__title">Published after</legend>
        {{#each errors}}
             {{#if_eq  @key 'publishedFrom'}}
                 <div style="color:red"><i>{{@value}}</i></div>
             {{/if_eq }}
        {{/each}}
        <div class="col col--lg-4">
            <label for="fromDateDay">Day</label>
            <input type="text" autocomplete="off" name="fromDateDay"
                   value="{{df parameters.fromDateDay.0 outputFormat="dd" inputFormat="dd"}}"
                   class="js-auto-submit__input width-lg--4"
                   maxlength="2" pattern="^(3[01]|[12][0-9]|[1-9])$" placeholder="dd">
        </div>
        <div class="col col--lg-4 margin-left--1">
            <label for="fromDateMonth">Month</label>
            <input type="text" autocomplete="off" name="fromDateMonth"
                   value="{{df parameters.fromDateMonth.0 outputFormat="MM" inputFormat="MM"}}"
                   class="js-auto-submit__input width-lg--4"
                   maxlength="2" placeholder="mm">
        </div>
        <div class="col col--lg-6 margin-left--1">
            <label for="fromDateYear">Year</label>
            <input type="text" autocomplete="off" name="fromDateYear"
                   value="{{df parameters.fromDateYear.0 outputFormat="yyyy" inputFormat="yyyy"}}"
                   class="js-auto-submit__input width-lg--6"
                   maxlength="4" pattern="[0-9]*" placeholder="yyyy">
        </div>
    </fieldset>
</div>

