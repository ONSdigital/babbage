<h4 class="filters__title">Topics</h4>
<div class="filters__field">
	<select class="input inline js-auto-submit__input" id="select-topic" name="topic">
		<option value="" >Select topic</option>
		{{#each topics}}	
		<option value="{{this.uri}}" {{#if_eq parameters.topic.0 this.uri}}selected{{/if_eq}}>{{this.title}}</option>
		{{/each}}
	</select>
</div>