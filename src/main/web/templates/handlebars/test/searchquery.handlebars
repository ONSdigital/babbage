{
    "from": 0,
    "size": 200,
    "query": {
        "function_score": {
            "query": {
                "dis_max": {
                    "queries": [{
                        "bool": {
                            "should": [{
                                "match": {
                                    "description.title.title_no_dates": {
                                        "query": "$q",
                                        "minimum_should_match": "1<-2 3<80% 5<60%",
                                        "boost": 10
                                    }
                                }
                            }, {
                                "multi_match": {
                                    "query": "$q",
                                    "type": "cross_fields",
                                    "fields": ["description.title^10", "description.edition"],
                                    "minimum_should_match": "3<80% 5<60%"
                                }
                            }]
                        }
                    }, {
                        "match": {
                            "description.searchBoost": {
                                "query": "$q",
                                "boost" : 100
                            }
                        }
                    }, {
                        "multi_match": {
                            "query": "$q",
                            "type": "best_fields",
                            "fields": ["description.summary", "description.metaDescription"],
                            "minimum_should_match": "75%"
                        }
                    }, {
                        "match": {
                            "description.keywords": {
                                "query": "$q",
                                "operator": "and"
                            }
                        }
                    }, {
                        "multi_match": {
                            "query": "$q",
                            "fields": ["description.cdid", "description.datasetId"],
                            "operator": "and"
                        }
                    }]
                }
            },

            "functions": [{
                "filter": {
                    "term": {
                        "_type": "bulletin"
                    }
                },
                "weight": 1.55
            }, {
                "filter": {
                    "term": {
                        "_type": "dataset_landing_page"
                    }
                },
                "weight": 1.35
            }, {
                "filter": {
                    "terms": {
                        "_type": ["article", "article_download", "compendium_landing_page"]
                    }
                },
                "weight": 1.30
            }, {
                "filter": {
                    "term": {
                        "_type": "static_adhoc"
                    }
                },
                "weight": 1.25
            }, {
                "filter": {
                    "term": {
                        "_type": "timeseries"
                    }
                },
                "weight": 1.2
            }],
            "score_mode": "multiply"
        }
    },

    "sort": [{
        "_score": {
            "order": "desc",
            "ignore_unmapped": true
        }
    }, {
        "releaseDate": {
            "order": "desc",
            "ignore_unmapped": true
        }
    }],
    "highlight": {
        "pre_tags": [
            "<strong>"
        ],
        "post_tags": [
            "</strong>"
        ],
        "fields": {
            "description.title": {
                "fragment_size": 0,
                "number_of_fragments": 0
            },
            "description.edition": {
                "fragment_size": 0,
                "number_of_fragments": 0
            },
            "description.cdid": {
                "fragment_size": 0,
                "number_of_fragments": 0
            },
            "description.datasetId": {
                "fragment_size": 0,
                "number_of_fragments": 0
            },
            "description.summary": {
                "fragment_size": 0,
                "number_of_fragments": 0
            },
            "description.metaDescription": {
                "fragment_size": 0,
                "number_of_fragments": 0
            },
            "description.keywords": {
                "fragment_size": 0,
                "number_of_fragments": 0
            }
        }
    }
}