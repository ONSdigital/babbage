{{> templates/handlebars/partials/header}}
<main id="main" role="main" tabindex="-1">
	<div class="page-header slate slate--blue">
		<div class="wrapper">
			{{> templates/handlebars/partials/breadcrumb}}
			<p class="page-header__title">
				Compendium
			</p>
			<h1 class="page-header__title flush--half--bottom">{{description.title}}{{#if description.edition}}: {{description.edition}}{{/if}}</h1>
			<div class="grid-wrap mini">
				<p class="grid-col tablet-grid-one-quarter {{#if description.nationalStatistic}}page-header__meta-block-with-img{{/if}}">
					{{#if description.nationalStatistic}}
					<img src="../../node_modules/ONS-Pattern-Library/ui/img/national-statistics.png" alt="National Statistics logo">
					{{/if}}
					<span>Contact: </span></br>
					<a href="mailto:{{description.contact.email}}">{{#if description.contact.name}}{{description.contact.name}}{{else}}{{description.contact.email}}{{/if}}</a>
				<p class="grid-col tablet-grid-one-quarter divider--border-left">
					<span>Release date: </span></br>{{df description.releaseDate}}
					</br>
					<a class="print-hidden" href="#">previous versions</a>
				</p>
				<p class="grid-col tablet-grid-one-quarter divider--border-left">
					<span>Next release: </span></br>{{description.nextRelease}}
				</p>
				<p class="grid-col tablet-grid-one-quarter divider--border-left print-hidden">
					<a href="" id="jsEnhancePrint" class="link-complex nojs-hidden js-enhance--show">
						<span class="icon-print"></span>
						<span class="link-complex__target">Print full report</span>
					</a>
					<br class="nojs-hidden js-enhance--show"/>
					<a href="#" class="link-complex">
						<span class="icon-download" role="presentation"></span>
						<span class="link-complex__target">Download PDF</span>
						<span>(??KB)</span>
					</a>
				</p>
			</div>
			<!-- /grip-wrap -->
		</div>
		<!-- /wrapper -->
	</div>
	<!-- /page-header -->

	<div class="wrapper panel--mar">
		<div class="grid-wrap">
			<div class="grid-col desktop-grid-full-width">
				<h2 class="flush">
					&lt; Return to <a href="{{parent.uri}}">{{parent.title}}</a>
				</h2>
			</div>
			<!-- /desktop-grid-full-width -->
		</div>
		<!-- /grid-wrap -->
	</div>
	<!-- /wrapper -->
	<div class="wrapper panel--separated--bottom">
		<ol id="toc" class="table-of-contents-ordered-list">
			{{#each sections}}
			<li>
				<a href="#{{slugify title}}">{{title}}</a>
			</li>
			{{/each}}
			{{#if accordion}}
				{{#each accordion}}
				<li>
					<a href="#{{slugify title}}" class="footnote-body">{{title}}</a>
				</li>
				{{/each}}
			{{/if}}
		</ol>
		<!-- /table-of-contents -->
	</div>
	<!-- /wrapper panel--separated--bottom -->
	<div class="wrapper panel--bottom-mar">
		<div class="grid-wrap">
			<div class="page-content">
				<article class="grid-col desktop-grid-two-thirds tablet-grid-full-width">
					{{#each sections}}
						{{!-- Prevent bottom border on last section before accordian --}}
						{{#if @last}}
						<section id="{{slugify title}}" class="panel--pad">
						{{else}}
						<section id="{{slugify title}}" class="panel--separated--bottom panel--pad">
						{{/if}}
							<header>
								<h2>{{title}}</h2>
							</header>
							{{md markdown}}
							<a class="print-hidden" href="#toc" title="Back to table of contents">Back to table of contents</a>
						</section>
					{{/each}}
					<!-- Accordion -->
					{{#if accordion}}
					<div class="panel--mar">
						{{#each accordion}}
						<section id="{{slugify title}}" class="accordion is-collapsed">
							<h2 class="accordion__title" aria-controls="content-{{@index}}">{{title}}</h2>
							<div class="accordion__content panel--bottom-mar-small" aria-labelledby="sc-{{@index}}">
								{{md markdown}}
								<a class="print-hidden" href="#toc" title="Back to table of contents">Back to table of contents</a>
							</div>
						</section>
						{{/each}}
					</div>
					{{/if}}
				</article>
				<!-- /desktop-grid-two-thirds -->
			</div>
			<!-- /page-content -->
			<div class="grid-col desktop-grid-one-third panel--top-mar">
				<article class="box solid box--green--separated--left">
					<div class="box__inner border box--padded">
						<h3 class="box__section__header">Data in this chapter</h3>
						<div class="box__content">
							<ul class="list--neutral">
								{{#each data}}
								<li class="flush--third--bottom">
									<a href="{{uri}}">{{title}}</a>
								</li>
								{{/each}}
							</ul>
						</div>
					</div>
					<!-- /box__inner -->
				</article>
				<!-- /box -->
				<div class="box box--padded sectioned">
					<h3 class="box__section__header">Contact details for this compendium</h3>
					<div class="box__content">
						<address>
							{{#if description.contact.name}}{{description.contact.name}}<br/>{{/if}}
                <a href="mailto:{{description.contact.email}}">{{description.contact.email}}</a><br/>
              {{#if description.contact.telephone}}Telephone: {{description.contact.telephone}}{{/if}}
						</address>
					</div>
				</div>
				<!-- /box -->
			</div>
			<!-- /desktop-grid-one-third -->
		</div>
		<!-- /grid-wrap -->
	</div>
	<!-- /wrapper -->
	<div class="panel--top-pad slate--mid-grey">
		<div class="wrapper">
			<div class="grid-wrap">
				<div class="grid-col desktop-grid-two-thirds">
					<article class="box box--teal--separated--left">
						<div class="box__inner border box--padded">
							<h3>Related articles and bulletins</h3>
							<div class="box__content">
								<ul class="list--neutral">
									{{#each relatedBulletins}}
									<li>
										<h4 class="flush"><a href="{{uri}}">{{title}}</a></h4>
										{{md description}}
									</li>
									{{/each}}
								</ul>
							</div>
						</div>
						<!-- /box__inner -->
					</article>
					<!-- /box -->
				</div>
				<!-- /grid-desktop-two-thirds -->
				<div class="grid-col desktop-grid-one-third">
					{{> templates/handlebars/partials/local-box}}
				</div>
				<!-- /desktop-grid-one-third -->
			</div>
			<!-- /grid-wrap -->
		</div>
		<!-- /wrapper -->
	</div>
</main>
{{> templates/handlebars/partials/footer}}
