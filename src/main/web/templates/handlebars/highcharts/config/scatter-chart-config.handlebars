{{#partial "chart-config"}}
options.chart.type="scatter";
options.xAxis.categories=[]; {{!-- override categories --}}
options.legend.enabled=false;
options.series=[{
	data: [{{#each data}}{label:"{{get categories @index}}",x:{{num (get this headers.1)}},y:{{num (get this headers.2)}} },{{/each}}],
}];

options.plotOptions.scatter= {
        marker: {
            radius: 5,
            states: {
                hover: {
                    enabled: true
                }
            }
        },
        states: {
            hover: {
                marker: {
                    enabled: false
                }
            }
        },
        tooltip: {
            headerFormat: '',
            pointFormat: '<b>{point.label}</b><br/>{{headers.1}}: {point.x} <br/>{{headers.2}}: {point.y}',
        }
};

{{/partial}}

{{!-- This denotes the template inherits from base-chart-config--}}
{{> highcharts/config/base-chart-config}} 