{{#partial "chart-config"}}
options.chart.type="pie";
options.series=[{
		name: "{{{headers.1}}}",
		sliced:true,
		colorByPoint: true,
		data: [{{#each data}} {name:"{{{get this headers.0}}}",y:{{alt (get this headers.1) "null"}} },{{/each}}]
	}];
options.plotOptions={
	     pie: {
	         allowPointSelect: true,
	         cursor: 'pointer',
	         showInLegend: true,
	         animation:false,
	         dataLabels: {
	             enabled: true,
	             format: '{point.name}: {point.y:.{{decimalPlaces}}f}'
	         }
	     }
	 };
options.tooltip={
		pointFormat: '{series.name}: <b>{point.y:.{{decimalPlaces}}f}</b>'
	};
options.legend={verticalAlign: "bottom"};
{{/partial}}

