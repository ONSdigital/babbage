{{#partial "additional-chart-config"}}

{{#each series}}
	options.series[{{@index}}].type="{{#if_eq (lookup  chartTypes this) "bar"}}{{#if rotated}}bar{{else}}column{{/if}}{{else}}line{{/if_eq}}";
	options.series[{{@index}}].zIndex={{#if_eq (lookup chartTypes this) "line"}}100{{else}}0{{/if_eq}};
	options.series[{{@index}}].stack="{{#contains groups.0 this}}group1{{else}}{{this}}{{/contains}}";
{{/each}}

options.plotOptions.bar = {stacking:"normal"};
options.plotOptions.column = {stacking:"normal"};


{{#if finishAtHundred}}
options.yAxis.max=100;
{{/if}}

{{/partial}}
{{!-- This denotes the template inherits from base-chart-config--}}
{{> highcharts/config/base/simple-chart-config}} 