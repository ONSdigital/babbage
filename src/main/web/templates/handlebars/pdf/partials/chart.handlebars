<div class="markdown-chart-container panel--bottom-mar print--avoid-break">
  <div
    class="markdown-chart-div"
    data-uri="{{uri}}"
    data-image-width="{{width}}"
  >
  </div>
  {{#if source}}
    <h5 class="flush--third--bottom font-size--h6">
      Source:{{source}}
    </h5>
  {{/if}}
  {{#if notes}}
    <h6 class="flush--third--bottom">Notes:</h6>
    {{md notes}}
  {{/if}}
</div>