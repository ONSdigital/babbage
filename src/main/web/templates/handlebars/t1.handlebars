            <article class="nav-panel nav-panel--stats nav-panel--home-hero sectioned">
                <div class="stat__wrap--home">
                    <header class="nav-panel__header">
                        <h2 class="gamma flush">{{statistics.data.description.title}}</h2>
                    </header>
                    <div class="stat__figure--home">
                        {{statistics.data.description.preUnit}} {{statistics.data.description.number}} {{statistics.data.description.unit}}
                    </div>
                    <div class="stat__description">
                        {{statistics.data.description.date}}
                    </div>
                    <img class="stat__image--home" src="{{statistics.data.uri}}/sparkline" alt="{{statistics.data.description.title}}">
                    
                    <a class="js-enhance--hide" href="{{statistics.data.uri}}">More info</a>
                </div>
                <footer class="nav-panel__footer-home-hero">
                    <a href="{{theme.uri}}">Explore {{theme.description.title}}</a>
                </footer>
            </article>
            <!-- grid-col -->
        </div>
        {{/each}}
        <!-- /grid-wrap -->
        </div>
