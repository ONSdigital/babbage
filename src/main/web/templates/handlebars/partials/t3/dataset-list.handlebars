<div class="col-wrap">
	<div class="col">
		<h3>Datasets</h3>
	</div>
</div>
<ul class="tiles__list">
	{{#each datasets}}
		<li class="col-wrap tiles__item tiles__item--list-type clickable-wrap flush-col">
			{{#resolve (absolute this.uri) filter="description"}}
			<div class="col col--lg-38">
				<h4 class="tiles__title-h4">
					<a href="{{absolute uri}}" title="{{description.title}}">
						{{description.title}}
					</a>
				</h4>
				<p class="tiles__content">{{description.summary}}</p>
			</div>
			<div class="col col--lg-20">
				<h4 class="tiles__title-h4">Meta</h4>
				<p class="tiles__content">Meta stuffs, maybe?</p>
			</div>
			{{/resolve}}
		</li>
	{{/each}}
</ul>
<a href="{{uri}}/datalist?type=dataset" class="btn btn--full-width">View all datasets related to {{description.title}}</a>
