<div class="col-wrap">
	<div class="col">
		<h3>Statistical bulletins</h3>
	</div>
</div>
<div class="col-wrap">
	<div class="col col--lg-40">
		<ul class="tiles__list">
			{{#each statsBulletins}}
			{{#resolve this.uri filter="description"}}
			<li class="col-wrap tiles__item--list-type-simple flush-col">
				<h4 class="tiles__title tiles__title-h4">
					<a href="{{uri}}" title="{{description.title}}">
						{{description.title}}{{#if description.edition}}: {{description.edition}}{{/if}}
					</a>
				</h4>
				<p class="tiles__content">
					{{description.summary}}
				</p>
			</li>
			{{/resolve}}
			{{/each}}
		</ul>

		<a href="{{uri}}/publications?type=bulletin" class="btn btn--primary btn--full-width">View all statistical bulletins</a>

	</div>
</div>
