<div class="col-wrap">
	<div class="col">
		<h3>Articles</h3>
	</div>
</div>
<div class="col-wrap">
	<div class="col col--lg-40">

	<ul class="tiles__list">
		{{#each relatedArticles}}
		{{#resolve this.uri filter="description"}}
		<li class="tiles__item--list-type-simple clickable-wrap flush-col">
			<h4 class="tiles__title-h4">
				<a href="{{uri}}" title="{{description.title}}">
					{{description.title}}{{#if description.edition}}: {{description.edition}}{{/if}}
				</a>
			</h4>
			<p class="tiles__content">
				{{description._abstract}}
			</p>
		</li>
		{{/resolve}}
		{{/each}}
	</ul>

		<a href="{{uri}}/articles" class="btn btn--full-width">View all related articles</a>

	</div>
</div>
