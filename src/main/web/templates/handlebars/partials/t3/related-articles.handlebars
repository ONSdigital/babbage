<div class="panel flush">
	<div class="grid-wrap">
		<div class="grid-col desktop-grid-full-width">
			<h2 class="flush">Related articles</h2>
			<div class="grid-wrap">
				<ul class="list--neutral">
					{{#each relatedArticles}}
					{{#resolve uri filter="description"}}
					<li class="grid-col desktop-grid-one-third box--padded-vertical nav--block-landing">
						<h3>
						<a href="{{uri}}" title="{{title}}">
							{{title}}
							{{#if edition}}
								{{#ne edition 'yes'}}: {{edition}}{{/ne}}
							{{/if}}
						</a>
						</h3>
						<p>
							{{_abstract}}
						</p>
					</li>
					{{/resolve}}
					{{/each}}
				</ul>
			</div>
			<!-- /grid-col -->
		</div>
		<!-- /grid-wrap -->
	</div>
	{{!--<a href="#">View all related articles</a>--}}
	<!-- /grid-wrap -->
</div>
