
<div class="background--iron-light margin-top-md--1 margin-bottom-md--2 js-hover-click">
    <div class="background--white width-md--23 width-lg--29 height--35 margin-top-sm--0 margin-top-md--0 overflow--hidden">
        <div class="width-md--23 width-lg--29 height--35 box__timeseries">
            {{> partials/highcharts/sparkline data}}
        </div>
    </div>
    <div class="equal-height box__content padding-top-sm--2 padding-right-sm--1 padding-bottom-sm--2 padding-left-sm--1 padding-top-md--2 padding-right-md--1 padding-bottom-md--2 padding-left-md--1">
        <h3>
            <a href="{{data.uri}}">{{data.description.title}}</a>
        </h3>
        <p class="margin-bottom-md--1">
            {{#if data.description.keyNote}}
                {{data.description.keyNote}}
            {{/if}}
        </p>
        <p  class="stand-out">
            {{#if data.description.preUnit}}
                {{data.description.preUnit}}
            {{/if}}

            {{nf data.description.number}}

            {{#if data.description.unit}}
                {{data.description.unit}}
            {{/if}}
        </p>
        {{#if data.description.date}}
            <p class="stand-out--list">
                {{data.description.date}}
            </p>
        {{/if}}

        <dl>
            <dt>{{labels.release-date}}: </dt>
            <dd>{{df data.description.releaseDate}}</dd>
            <br>
            <dt>{{labels.next-release}}: </dt>
            <dd>{{data.description.nextRelease}}</dd>
        </dl>
    </div>

    <div class="background--iron-light box__content height--7 width--50 border-top--iron-sm border-top--iron-md padding-top-sm--1 padding-left-sm--1 padding-top-md--1 padding-left-md--1 more-link">
        <a href="{{bulletin.uri}}" class="block">{{labels.view-this-data}}</a>
    </div>

</div>

<a href="#timeseries" class="btn btn--primary btn--full-width margin-top margin-bottom-sm--4 jsEnhanceAnimateScroll">{{labels.more-data}}</a>

