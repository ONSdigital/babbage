<div class="grid-col tablet-grid-one-half headline--box-container panel--mobile-bottom-mar">
	<div class="box--padded equal-height solid panel--bottom-mar">
		<h2>Latest data</h2>
		<header class="box___section">
			<h3 class="navpanel-list-heading lede flush">
			<a href="{{data.uri}}">{{data.description.title}}</a>
			</h3>
			{{#if data.description.keyNote}}
			<p class="panel--bottom-mar">
				{{data.description.keyNote}}
			</p>
			{{/if}}
		</header>
		<div class="grid-wrap">
			<div class="grid-col grid-two-thirds">
				<div class="box box--padded--small headline--stat-centred">
					<a href="{{data.uri}}">
						{{> partials/highcharts/sparkline data}}
					</a>
				</div>
			</div>
			<div class="grid-col grid-one-third no-padding">
				<div class="stat">
					<div class="stat__figure">
						<div>
							{{#if data.description.preUnit}}
							<span class="stat__figure__preunit">{{data.description.preUnit}}</span>
							{{/if}}
							<span class="stat__figure-enhance">{{data.description.number}}</span>
							{{#if data.description.unit}}
							<span class="stat__figure__unit"> {{data.description.unit}}</span>
							{{/if}}
						</div>
						<div class="stat__description">
							{{data.description.date}}
						</div>
					</div>
				</div>
				<dl class="micro definition-list definition-list--inline">
					<dt>Last updated:</dt>
					<dd class="flush flush--third--bottom">{{df data.description.releaseDate}}</dd>
					<dt>Next update:</dt>
					<dd class="flush flush--third--bottom">{{data.description.nextRelease}}</dd>
				</dl>
			</div>
			<!-- /grid-col -->
		</div>
		<!-- /grid-wrap -->
	</div>
	<!-- /box--padded -->
	<a href="#data" class="btn btn--primary">view latest data
		{{!-- <span class="icon icon-down-open-big icon--button-inline"></span>--}}
	</a>
</div>
