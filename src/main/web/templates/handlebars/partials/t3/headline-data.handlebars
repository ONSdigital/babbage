<h2 id="latest-data">Latest data</h2>
<div class="tiles__item tiles__item--image-type-headline flush-col">
	<div class="tiles__image tiles__image--headline-sparkline">
		<a href="{{data.uri}}">
		{{> partials/highcharts/sparkline data}}
		</a>
	</div>
	<h3 class="tiles__title-h3">
		<a href="{{data.uri}}">{{data.description.title}}</a>
	</h3>
	<div class="tiles__content">
		{{#if data.description.keyNote}}
			<div class="tiles__keynote">{{data.description.keyNote}}</div>
		{{/if}}
		{{#if data.description.preUnit}}
		<span class="tiles__preunit">{{data.description.preUnit}}</span>
		{{/if}}
		<span class="tiles__figure stat__figure-enhance">{{data.description.number}}</span>
		{{#if data.description.unit}}
		<span class="tiles__unit"> {{data.description.unit}}</span>
		{{/if}}
		{{#if data.description.date}}<div class="tiles__date">{{data.description.date}}</div>{{/if}}
		<dl class="margin-top margin-bottom">
			<dt>{{labels.product-last-updated}}</dt>
			<dd class="flush">{{df data.description.releaseDate}}</dd>
			<dt>{{labels.product-next-update}}</dt>
			<dd class="flush">{{data.description.nextRelease}}</dd>
		</dl>

	</div>

	<a href="{{data.uri}}" class="tiles__read-more">View this data in more detail</a>

</div>

<a href="#timeseries" class="btn btn--full-width margin-top">More data</a>
