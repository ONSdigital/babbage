<div class="col-wrap">
	<div class="col">
		<h3 id="timeseries">Time series</h3>
	</div>
</div>

<ul class="tiles__list">
	{{#each items}}
	{{#resolve this.uri filter="description"}}
	<li class="col-wrap tiles__item tiles__item--list-type clickable-wrap flush-col">
		<div class="col col--md-15 col--lg-23">
			<h4 class="tiles__title-h4">
				<a href="{{uri}}">{{description.title}}</a>
			</h4>
			{{#if description.keyNote}}
			<p class="tiles__content">
				{{description.keyNote}}
			</p>
			{{/if}}
		</div>
		<div class="col col--md-15 col--lg-18">
			<a href="{{uri}}">
				<div style="height:160px;width:90%">
				{{>partials/highcharts/sparkline}}
				</div>
			</a>
		</div>
		<div class="col col--md-13 col--lg-18">
			<div class="tiles__content">
				{{#if description.preUnit}}
				<span class="tiles__preunit tiles__preunit--list">{{description.preUnit}}</span>
				{{/if}}
				<span class="tiles__figure tiles__figure--list">{{nf description.number}}</span>
				{{#if description.unit}}
				<span class="tiles__unit tiles__unit--list"> {{description.unit}}</span>
				{{/if}}
				{{#if description.preUnit}}
				<span class="stat__description">{{description.date}}</span>
				{{/if}}
				<dl class="flush">
					<dt class="tiles__label">{{labels.product-last-updated}}</dt>
					<dd class="flush">{{df description.releaseDate}}</dd>
					<dt class="tiles__label">{{labels.product-next-update}}</dt>
					<dd class="flush">{{description.nextRelease}}</dd>
				</dl>
			</div>
		</div>
	</li>
	{{/resolve}}
	{{/each}}
</ul>
<a href="{{uri}}/datasets" class="btn btn--full-width">All timeseries related to {{description.title}}</a>
