<div class="box__section">
	<header>
		<h2 class="list--table-header panel--pad">Time series related to {{description.title}}</h2>
	</header>
	<ol class="list--table list--table--complex table--striped-light table-light--sectioned">
		{{#each items}}
		{{#resolve this.uri filter="description"}}
		<li class="list--table__item list--table__body clickable-wrap">
			<div class="list--table__item__body list--table__item__body--caption">
				<h3 class="flush--half--bottom">
				<a href="{{uri}}">{{title}}</a>
				</h3>
				{{#if keyNote}}
				<p class="list--table__item__description">
					{{keyNote}}
				</p>
				{{/if}}
			</div>
			<div class="list--table__item__body list--table__item__body--chart">
				<a href="{{data.uri}}"><img class="full-width" src="{{uri}}/sparkline" alt="{{title}}"></a>
			</div>
			<div class="list--table__item__body">
				<div class="list--table__item__body list--table__item__body--stat float-left">
					<div class="stat__figure">
						{{#if preUnit}}
						<span class="stat__figure__preunit">{{preUnit}}</span>
						{{/if}}
						<span class="stat__figure-enhance">{{number}}</span><span class="stat__figure__unit"> {{unit}}</span>
						<div class="stat__description">{{date}}</div>
					</div>
				</div>
				<div class="list--table__item__body list--table__item__body--update">
					<dl class="micro flush--half--vertical">
						<dt>Last updated:</dt>
						<dd class="flush flush--third--bottom">{{df releaseDate}}</dd>
						<dt>Next update:</dt>
						<dd class="flush flush--third--bottom">{{nextRelease}}</dd>
					</dl>
				</div>
			</div>
		</li>
		{{/resolve}}
		<!-- /list-table__item -->
		{{/each}}
		{{!--
		<li class="list--table__item list--table__footer">
			<div class="table__actions box--inline box__footer--right ">
				<a href="">View all 12,000 time series for inflation and price indices <span class="icon-right-open-big"></span> </a>
			</div>
		</li>--}}
	</ol>
	<!-- /list--table -->
</div>
<!-- /box-section -->
