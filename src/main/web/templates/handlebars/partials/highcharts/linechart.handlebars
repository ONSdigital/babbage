<div class="timeseries__filters">
    <h3 class="tiles__title-h3">Filters</h3>
    <div class="tiles__content">
        <div data-chart-controls="" data-chart-controls-for="">
            <!-- <div class="button-bar chart-area__controls__buttons"> -->
                <div class="col col--lg-13">
                    <p class="flush">Show data as</p>
                    <label class="btn">
                        Chart
                        <input type="radio" name="type" data-chart-controls-type="chart" checked>
                    </label>
                    <label class="btn">
                        Table
                        <input type="radio" name="type" data-chart-controls-type="table">
                    </label>
                </div>
                <div class="col col--lg-20">
                    <p class="flush">Frequency</p>
                    <label class="btn frequency-select">
                        Monthly
                        <input type="radio" name="scale" data-chart-controls-scale="months" value="months">
                    </label>
                    <label class="btn frequency-select">
                        Quarterly
                        <input type="radio" name="scale" data-chart-controls-scale="quarters" value="quarters">
                    </label>
                    <label class="btn  frequency-select">
                        Yearly
                        <input type="radio" name="scale" data-chart-controls-scale="years" value="years">
                    </label>
                </div>
            <!-- </div> -->
            <!-- /chart-area__controls__buttons -->
            <div class="col col--lg-24">
                <p class="flush">Time period</p>
                <label class="btn">
                    All
                    <input type="radio" name="range" data-chart-controls-range="all">
                </label>
                <label class="btn">
                    10yrs
                    <input type="radio" name="range" data-chart-controls-range="10yr">
                </label>
                <label class="btn">
                    5yrs
                    <input type="radio" name="range" data-chart-controls-range="5yr">
                </label>
                <label class="btn">
                    Custom
                    <input type="radio" name="range" data-chart-controls-range="Custom">
                </label>
