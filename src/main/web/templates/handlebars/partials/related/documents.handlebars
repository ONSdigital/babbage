{{#if relatedDocuments}}
    <div class="tiles__item tiles__item--nav-type flush-col print--hide flex flex-direction--column height--fill margin--0">
        <h3 class="tiles__title-h3 tiles__title-h3--nav">{{labels.related-publications}}</h3>
        <div class="tiles__content tiles__content--nav flex--1">
            <ul class="list--neutral">
                {{#each relatedDocuments}}
                    {{#resolve this.uri}}
                        <li>
                            <a href="{{uri}}"
                               data-gtm-title="{{description.title}}{{#if description.edition}}: {{description.edition}}{{/if}}"
                               data-gtm-type="related-publication">
                                {{description.title}}{{#if description.edition}}{{#if_ne description.edition 'yes'}}: {{description.edition}}{{/if_ne}}{{/if}}
                            </a>
                        </li>

                    {{else}}
                        <li>
                            [Unpublished] <span class="break-word">{{uri}}</span>
                        </li>
                    {{/resolve}}
                {{/each}}
            </ul>
        </div>
    </div>
{{/if}}
