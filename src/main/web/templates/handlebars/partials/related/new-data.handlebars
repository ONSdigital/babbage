
{{#if_all relatedDatasets (eq type "dataset_landing_page")}}
	<div class="print--hide">
        {{> partials/related/data-list}}
	</div>
{{/if_all}}

{{#if_any relatedData relatedDatasets (eq type "dataset_landing_page")}}
<a class="btn btn--primary btn--full-width margin-bottom-sm--2 margin-bottom-md--2" href="{{relatedUri}}">
    {{!-- if "parent" get the parent title --}}
    {{#if_eq relatedTitle "parent"}}
        {{#last breadcrumb}}
            View all data related to {{description.title}}
        {{/last}}
    {{/if_eq}}

    {{!-- if "self" use page title and edition if one exists --}}
    {{#if_eq relatedTitle "self"}}
        View all data related to {{description.title}}{{#if description.edition}}: {{description.edition}}{{/if}}
    {{/if_eq}}

    {{!-- if not "self" or "parent" use custom title --}}

    {{#if_all (ne relatedTitle "parent") (ne relatedTitle "self")}}
        {{relatedTitle}}
    {{/if_all}}
</a>
{{/if_any}}