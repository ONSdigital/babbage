{{!--

Template t6-3 (compendium dataset has this partial hardcoded to deal with the difference between
"this" and "these" in the header. An ychanges to this file may need to be duplicated in that tempalte too.

--}}


<div class="tiles__item tiles__item--nav-type flush-col">
	<h3 class="tiles__title-h3 tiles__title-h3--nav">
		{{#if_eq type "compendium_chapter"}}
			{{!-- Hack to display "compendium" for chapters --}}
			{{label "contact-details-for-this" (lowercase (typeLabel "compendium_landing_page"))}}
		{{else}}
			{{label "contact-details-for-this" (lowercase (typeLabel type))}}
		{{/if_eq}}
	</h3>
	<div class="tiles__content--nav">
		<address>
			{{#if description.contact.name}}{{description.contact.name}}<br/>{{/if}}
			<a href="mailto:{{description.contact.email}}">{{description.contact.email}}</a><br/>
			{{#if description.contact.telephone}}{{labels.telephone}}: {{description.contact.telephone}}{{/if}}
		</address>
	</div>
</div>